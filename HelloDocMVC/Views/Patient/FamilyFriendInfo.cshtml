<script>
    const phoneInputPatient = document.querySelector("#phone");
    const phoneInputP = window.intlTelInput(phoneInputPatient, {
        utilsScript:
            "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
    }); 

  
    const phoneInputPH = document.querySelector("#phone2");
    const phoneInputH = window.intlTelInput(phoneInputPH, {
        utilsScript:
            "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
    });

    // function popUpClick() {
    //     // document.getElementById("mainRow").style.backgroundColor = "white"
    //     document.getElementById("mainRow").style.opacity = "1"
    //     document.getElementById("popUp").style.display = "none"
    // }

    //date validation
    const currentDate = new Date().toISOString().split('T')[0];

    document.getElementById('DateOfBirth').setAttribute('max', currentDate);

    function clearAll() {
        let a = document.getElementsByTagName("input")
        for (let i = 0; i < a.length; i++) {
            a[i].value = "";
        }

        let b = document.getElementsByTagName("textarea")
        for (let i = 0; i < b.length; i++) {
            b[i].value = "";
        }
    }

    function myFunction() {
        var x = document.getElementById("myFile").value;
        document.getElementById("demo").innerHTML = x;
    }

</script>