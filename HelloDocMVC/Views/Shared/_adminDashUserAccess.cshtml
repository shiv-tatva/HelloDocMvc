@model DAL_Data_Access_Layer_.CustomeModel.accessModel;

<style>
    .form-check-input:checked {
        background-color: #0dcaf0 !important;
        border-color: #0dcaf0 !important;
    }
</style>
@functions {
    public string GetStatusName(int status)
    {
        switch (status)
        {
            case 1: return "Active";
            case 2: return "Pending";
            case 3: return "Not Active";
            default: return "Active";
        }
    }
}



<div class="container"> 
    <h4 class="mb-4">User Access</h4>

    <div class="border rounded shadow p-3">
        <div class="d-flex justify-content-between align-items-center mb-3">

            <form role="search" class="d-flex align-items-center border border-rounded rounded border-info mb-3">
                <i type="search" class="bi bi-search px-2" style="position:absolute;"></i>
                <select class="form-select border-0 ps-5" id="AspTypeidRole" value="this.value" aria-label="Default select example" onchange="GetUserAccess(this.value)">
                    <option value="0" selected>All</option>
                    @foreach (var obj in Model.AspnetUserroles)
                    {
                        <option value="@obj.Id">
                            @obj.Name
                        </option>
                    }
                </select>
            </form>

            <div class=" mb-3 d-none" id="buttonProvider">
                <button type="button" class="btn btn-info text-light d-md-block d-none" onclick="GetCreateProvider2()">Create Provider Account</button>
                <button type="button" class="btn border-info text-light d-md-none d-block px-2 py-0" onclick="GetCreateProvider2()"><i class="bi bi-plus text-info fs-3"></i></button>
            </div>
            <div class=" mb-3 d-none" id="buttonAdmin">
                <button type="button" class="btn btn-info text-light d-md-block d-none" onclick="GetCreateProvider()">Create Admin Account</button>
                <button type="button" class="btn border-info text-light d-md-none d-block px-2 py-0" onclick="GetCreateProvider()"><i class="bi bi-plus text-info fs-3"></i></button>
            </div>
        </div>
        <div class="table-responsive d-lg-block d-none">
            <table class="table">
                <thead class="bg-body-tertiary ">
                <thead>
                    <tr>
                        <th>Account Type<span><i class="bi bi-arrow-up"></i></span></th>
                        <th>Account POC</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th>Open Request</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                        @foreach (var obj in Model.UserAccess)
                        {


                        <tr class="align-middle">

                            <td>
                                <span class="document-name">@obj.Accounttype</span>
                            </td>
                            <td>@obj.accountname</td>
                            <td>@obj.phone</td>
                            <td>@GetStatusName(@obj.status)</td>
                            <td>@obj.openrequest</td>
                            <td>
                                    @if (@obj.roleid == 1)
                                    {
                                    <button type="button" class="btn btn-outline-dark border-info text-info" onclick="GetAdminProfile(2,@obj.aspnetid)">
                                        Edit
                                    </button>
                                    }
                                    else
                                    {
                                    <button type="button" class="btn btn-outline-dark border-info text-info" onclick="GetEditProvider(@obj.aspnetid,2)">
                                        Edit
                                    </button>
                                    }

                            </td>
                        </tr>
                        }

                </tbody>

            </table>
        </div>

        <div class="border rounded shadow d-block d-lg-none">
            <div class="accordion container-fluid p-0" id="accordionPanelsStayOpenExample">
                <table class="w-100">
                    <thead>
                        <tr>
                            <th class="d-none"></th>
                            <th class="d-none"></th>
                        </tr>
                    </thead>
                    @{
                        var counter = 1;
                    }
                    <tbody>
                        @foreach (var obj in Model.UserAccess)
                        {

                            <tr class="d-flex flex-column">
                                <td>
                                    <h2 class="accordion-header" id="flush-heading@(counter)"></h2>

                                    <div class="accordion-button collapsed d-flex flex-column pb-0" data-bs-toggle="collapse"
                                         data-bs-target="#flush-collapse@(counter)" aria-expanded="false"
                                         aria-controls="flush-collapse@(counter)">

                                        <div class="w-100 ">
                                            <span class="fw-bolder">
                                                @obj.accountname
                                            </span>
                                        </div>
                                        <div class="w-100">
                                            <div class="">
                                                <span class="fw-bolder">Account Type: @obj.Accounttype </span>
                                            </div>
                                        </div>

                                    </div>

                                </td>
                                <td>
                                    <div id="flush-collapse@(counter)" class="accordion-collapse collapse"
                                         aria-labelledby="flush-heading@(counter)" data-bs-parent="#accordionFlushExample">
                                        <div class="accordion-body main-flex pt-2">

                                            <div class="inner-flex">

                                                <span class="accordion-heading-inner">
                                                    <b>Patient:</b>
                                                    <span class="accordion-value-inner">
                                                        @obj.phone
                                                    </span>
                                                </span>
                                            </div>
                                            <div class="inner-flex">

                                                <span class="accordion-heading-inner">
                                                    <b>Status:</b>
                                                    <span class="accordion-value-inner">
                                                        @GetStatusName(@obj.status)
                                                    </span>
                                                </span>
                                            </div>
                                            <div class="inner-flex">

                                                <span class="accordion-heading-inner">
                                                    <b>Open Request:</b>
                                                    <span class="accordion-value-inner">
                                                        @obj.openrequest
                                                    </span>
                                                </span>
                                            </div>

                                            <div class="inner-flex d-flex justify-content-end">
                                                @if (@obj.roleid == 1)
                                                {
                                                    <button type="button" class="btn btn-outline-dark border-info text-info" onclick="GetAdminProfile(2,@obj.aspnetid)">
                                                        Edit
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-outline-dark border-info text-info" onclick="GetEditProvider(@obj.aspnetid,2)">
                                                        Edit
                                                    </button>
                                                }

                                            </div>

                                        </div>
                                    </div>
                                </td>
                            </tr>
                            counter++;

                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

<script>
    function GetUserAccess(accounttypeid) {
        event.preventDefault();
        $.ajax({
            method: "GET",
            url: "/adminDashboard/userAccess",
            data: { accounttypeid: accounttypeid },
            success: function (res) {
                $("#content").html(res);
                $("#AspTypeidRole").val(accounttypeid);
                if (accounttypeid == 1) {
                    $("#buttonAdmin").removeClass("d-none");
                }
                if (accounttypeid == 2) {
                    $("#buttonProvider").removeClass("d-none");
                }
            },

            error: function () {
                alert("Error");
            },
        });
    }
    function GetCreateProvider2() {
        $.ajax({
            method: "GET",
            url: "/adminDashboard/GetCreateProvider",

            success: function (result) {
                $("#content").html(result);
            },
            error: function () {
                alert("Error");
            },
        });
    }
</script>