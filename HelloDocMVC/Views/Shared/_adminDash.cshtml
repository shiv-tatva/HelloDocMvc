                        <i class="bi bi-clock-history me-2 d-none d-sm-inline" style="font-size: 1.5em;"></i>
                        <h6 class="px-1 m-0">Conclude</h6>
                    </div>
                    <div class="ps-1 pt-3">
                        <h4>
                            @{
                                var countFour = Model.data.Count(rf => rf.status == 6);
                            }
                            @countFour
                        </h4>
                    </div>
                </div>
                <div class="triangle " id="triangle4"></div>
            </div>

            <div class="col-xl-2 col-lg-2 col-md-4 col-sm-4 mb-3 col-4" role="presentation" >
                <div class="border rounded p-1 p-sm-3 ToClose" id="ToClose-tab" data-bs-toggle="tab"
                     data-bs-target="#ToClose-tab-pane" type="button" role="tab" aria-controls="ToClose-tab-pane"
                     aria-selected="false">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-person-x me-2 d-none d-sm-inline" style="font-size: 1.5em;"></i>
                        <h6 class="px-1 m-0">To Close</h6>
                    </div>
                    <div class="ps-1 pt-3">
                        <h4>
                            @{
                                var countFive = Model.data.Count(rf => rf.status == 3 || rf.status == 7 || rf.status == 8);
                            }
                            @countFive
                        </h4>
                    </div>
                </div>
                <div class="triangle " id="triangle5"></div>
            </div>

            <div class="col-xl-2 col-lg-2 col-md-4 col-sm-4 mb-3 col-4" role="presentation" >
                <div class="border rounded p-1 p-sm-3 Unpaid" id="Unpaid-tab" data-bs-toggle="tab"
                     data-bs-target="#Unpaid-tab-pane" type="button" role="tab" aria-controls="Unpaid-tab-pane"
                     aria-selected="false">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-currency-dollar  me-2 d-none d-sm-inline" style="font-size: 1.5em;"></i>
                        <h6 class="px-1 m-0">Unpaid</h6>
                    </div>
                    <div class="ps-1 pt-3">
                        <h4>
                            @{
                                var countSix = Model.data.Count(rf => rf.status == 9);
                            }
                            @countSix
                        </h4>
                    </div>
                </div>
                <div class="triangle " id="triangle6"></div>
            </div>
        </div>

        

        <!-- ----------------------------------------------------------table head ------------------------------------>


        
           

        <div class="tab-content" id="myTabContent1">
            <div class="tab-pane fade show active" id="new-tab-pane" role="tabpanel" aria-labelledby="new-tab"
                 tabindex="0" style="background:white">
                <partial name="_adminDashNew" />
            </div>

            <div class="tab-pane fade" id="Pending-tab-pane" role="tabpanel" aria-labelledby="Pending-tab" tabindex="0" style="background:white">
