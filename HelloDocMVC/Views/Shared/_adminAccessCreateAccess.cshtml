@model DAL_Data_Access_Layer_.CustomeModel.accessModel;


<div class="container">
    <div class="d-flex justify-content-between align-items-center mx-3">
        <h4>Create Role</h4>

        <a onclick="access()"
           class="btn shadow  btn-outline-secondary border-info text-info px-3 ">
            <i class="fa-solid fa-angle-left fs-6"></i> Back
        </a>
    </div>

    <form method="post" id="AccountCreateForm" onsubmit="SetCreateAccessAccount()">

        <div class="m-3 p-3 border rounded shadow">
            <h5>Details</h5>
            <div class="row mt-1">
                <div class="form-floating mb-3 col-12 col-sm-6 ">
                    <input type="text" class=" form-control dark-mode2   " id="RoleName"
                           placeholder="RoleName" aria-label="RoleName" asp-for="@Model.CreateAccountAccess.name">
                    <span class="text-danger" asp-validation-for="@Model.CreateAccountAccess.name"></span>
                    <label class="ms-2 " for="RoleName">Role Name</label>

                </div>
                <input type="text" asp-for="@Model.CreateAccountAccess.roleid" hidden />
                <div class="form-floating mb-3 col-12 col-sm-6 ">
                    <select class="form-select form-control dark-mode2   d1class" id="Role" asp-for="@Model.CreateAccountAccess.accounttypeid" onchange="FilterRolesMenu(this.value)">
                        <option value="" disabled selected>All</option>
                        @foreach (var obj in Model.Aspnetroles)
                        {
                            <option value="@obj.Id">
                                @obj.Name
                            </option>
                        }
                    </select>
                    <span class="text-danger" asp-validation-for="@Model.CreateAccountAccess.accounttypeid"></span>

                    <label for="Role" class="ms-2 ">Role</label>
                </div>
            </div>

            <div class="row mt-2">
                <div class="form-floating mb-3 col-12" id="RolesMenuList">
                    @foreach (var obj in Model.Menus)
                    {
                        <div class="form-check form-check-inline px-2 mx-3">
                            <input class="form-check-input d2class" name="AccountMenu" type="checkbox" id="@obj.Menuid" value="@obj.Menuid">
                            <label class="form-check-label" for="@obj.Menuid">@obj.Name</label>
                        </div>
                    }
                </div>

            </div>



            <div class="d-grid gap-2 d-flex justify-content-center  justify-content-md-end m-4 pt-4 ">

                <button type="submit" class="btn text-white btn-info">Save</button>
                <button type="reset" id="cancelBtnPhyEdit1" class="btn btn-outline-info CancelBtn">
                    Cancel
                </button>


            </div>

        </div>

    </form>
</div>


<partial name="_ValidationScriptsPartial" />

<script>
    function FilterRolesMenu(accounttype) {
        event.preventDefault();
        $.ajax({
            method: "GET",
            url: "/adminDashboard/FilterRolesMenu",
            data: { accounttype: accounttype },
            success: function (result) {
                $("#RolesMenuList").html(result);
            },
            error: function () {
                toastr.error("Error To Load Partial View");
            },
        });
    }
    function SetCreateAccessAccount() {
        event.preventDefault();

        if ($("#AccountCreateForm").valid()) {
            $.ajax({
                method: "POST",
                url: "/adminDashboard/SetCreateAccessAccount",
                data: $("#AccountCreateForm").serialize(),

                success: function (result) {
                    access();
                    alert("Done")
                },

                error: function () {
                    toastr.error("Error To Load Partial View");
                },
            });
        }
    }
</script>