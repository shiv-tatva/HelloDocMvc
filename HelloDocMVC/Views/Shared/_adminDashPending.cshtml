@model DAL_Data_Access_Layer_.CustomeModel.adminDashData

<style>
    th {
        color: #575757;
        font-size: 14px;
        font-weight: 500;
        background-color: #f0f0f0;
        padding-top: 22px;
        padding-bottom: 22px;
    }
</style>

<div class="tab-pane fade" id="Pending-tab-pane" role="tabpanel" aria-labelledby="Pending-tab" tabindex="0" >
    <div class="my-4" id="patients_flex_box">
        <span id="patient_txt">
            Patients <span id="patient_sub">(Pending)</span>
        </span>

        <span id="patiens_five-link-mediaquerry" style="display:flex;">
            <button onclick="newSendLinkPending()" class="btn btn-info patient_five_button mx-1 " role="button">
                <i class="bi bi-send"></i>
                <span>
                    Send link
                </span>
            </button>
            <button onclick="createRequestPending()" class="btn btn-info patient_five_button  mx-1" role="button">
                <i class="bi bi-pencil-square"></i>
                <span>
                    create request
                </span>
            </button>
            @using (Html.BeginForm("Export", "AdminDashboard", FormMethod.Post))
            {
                <input type="hidden" name="GridHtml" />
                <button type="submit" value="Export" class="btn btn-info patient_five_button  mx-1" onclick="exportBtnPending()">
                    <i class="bi bi-arrow-up-right me-1"></i><span class="d-none d-sm-inline-block">Export</span>
                </button>

            }
            <button class="btn btn-info patient_five_button  mx-1" role="button" onclick="window.location.href='@Url.Action("ExportAll","AdminDashboard")'">
                <i class="bi bi-box-arrow-up-right"></i>
                <span>
                    Export All
                </span>
            </button>
            <button onclick="requestSupportPending()" class="btn btn-info patient_five_button  mx-1" role="button">
                <i class="bi bi-person-plus"></i>
                <span>
                    Request DTY support
                </span>
            </button>
        </span>
    </div>
    <div class="mt-2 mb-2 container-fluid" style="box-shadow: 0px 0px 5px grey;">

        <div class="container-fluid p-0">
            <div id="tablehead-container">

                <div id="tablehead-left">
                    <div class="d-md-flex gap-1">
                        <form role="search" class="bg-light d-flex align-items-center border border-rounded rounded mb-2">
                            <!-- <i class="bi bi-search"></i> -->
                            <i type="search" class="fa-solid fa-magnifying-glass px-2" style="color:#adadad;position:absolute;"></i>
                            <input class="form-control border-0" id="my-search-input-pending" type="search" placeholder="Search" aria-label="Search">
                        </form>

                        
                            <select  id="regionFilterPending" onchange="regionClickPending()" class="form-select  mb-2" aria-label="Default select example" >
                                <option id="reason" disabled selected="">
                                    Select Regions
                                </option>
                                <option value="0">
                                    All Regions
                                </option>
                                @foreach (var item in Model._RegionTable)
                                {
                                    <option value="@item.Regionid">@item.Name</option>
                                }
                            </select>
                    </div>

                </div>
                <span id="tablehead-right">
                    <span class="table_head_five" id="all" type="button" onclick="tableFilter2(0)" style="cursor:pointer">
                        All
                    </span>
                    <span class="table_head_five" onclick="tableFilter2(1)" style="cursor:pointer">

                        <span class="patient_circle"></span>
                        <span>
                            Patients
                        </span>
                    </span>
                    <span class="table_head_five" onclick="tableFilter2(2)" style="cursor:pointer">

                        <span class="family_circle"></span>

                        <span>
                            Family/Friends
                        </span>
                    </span>
                    <span class="table_head_five" onclick="tableFilter2(4)" style="cursor:pointer">

                        <span class="Bussiness_circle"></span>
                        <span>
                            Bussiness
                        </span>
                    </span>
                    <span class="table_head_five" onclick="tableFilter2(3)" style="cursor:pointer">

                        <span class="Concierge_circle"></span>

                        <span>
                            Concierge
                        </span>
                    </span>
                </span>
            </div>
        </div>

        <div id="table_tabview">
            <div class="table-responsive d-none d-sm-block" id="tableParentDivPending">
                @if (Model.data.Count() > 0)
                {                    
                    <table class="table" id="tableDataMainPending">
                    <thead>
                        <tr>
                            <th scope="col" class="dark-mode2">Name</th>
                            <th scope="col" class="dark-mode2">Date Of Birth</th>
                            <th scope="col" class="dark-mode2">Requestor</th>
                            <th scope="col" class="dark-mode2">Physician Name</th>
                            <th scope="col" class="dark-mode2">Date Of Service</th>
                            <th scope="col" class="dark-mode2">Phone</th>
                            <th scope="col" class="dark-mode2">Address</th>
                            <th scope="col" class="dark-mode2">Notes</th>
                            <th scope="col" class="dark-mode2">Chat With</th>
                            <th scope="col" class="dark-mode2">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.data)
                        {
                            
                                var bgColor = "He";
                                var role = "hello";

                                @if (item.request_type_id == 1)
                                {
                                    bgColor = "#60be5e";
                                    role = "Patient";
                                }
                                else if (item.request_type_id == 2)
                                {
                                    bgColor = "#e69232";
                                    role = "FamilyFriend";
                                }
                                else if (item.request_type_id == 3)
                                {
                                    bgColor = "#0b7ebf";
                                    role = "Concierge";
                                }
                                else if (item.request_type_id == 4)
                                {
                                    bgColor = "#d76879";
                                    role = "Business";
                                }


                                <tr class="tablerows @role">
                                    <td class="text-white" style="background:@bgColor">
                                        <div class="table_name_email">

                                            @item.first_name, @item.last_name
                                            <a href="">
                                                <i class="bi bi-envelope me-3  rounded-5 border p-1 text-info" style="color:white!important"></i>
                                            </a>
                                        </div>
                                    </td>
                                <td class="text-white" style="background:@bgColor">@item.fulldateofbirth</td>
                                    <td class="text-white" style="background:@bgColor">@item.requestor_fname , @item.responseor_lname</td>
                                    <td class="text-white" style="background:@bgColor">
                                        @item.phy_name
                                    </td>
                                <td class="text-white" style="background:@bgColor">@item.created_date</td>
                                    <td class="text-white" style="background:@bgColor">
                                        <div class="table_phone">
                                            <a href="">
                                                <i class="bi bi-telephone   rounded-5   p-1 text-info" style="color:white!important"></i>
                                                @item.mobile_num
                                            </a>
                                        </div>
                                        <div style="color:white">
                                            (Patient)
                                        </div>
                                        @if (item.request_type_id != 1)
                                        {
                                            <div class="table_phone">
                                                <a href="">
                                                    <i class="bi bi-telephone   rounded-5   p-1 text-info" style="color:white!important"></i>
                                                    @item.requestor_mobile_num
                                                </a>
                                            </div>
                                            <div style="color:white">
                                                (@role)
                                            </div>
                                        }
                                    </td>
                                    <td class="text-white" style="background:@bgColor">@item.address</td>
                                    <td class="text-white" style="background:@bgColor">
                                        @if (item.notes.Count() != 0)
                                        {
                                            @if (item.notes.Last().Transtophysicianid != null)
                                            {
                                                <span>Admin Transfer To </span>
                                                @item.notes.Last().Transtophysicianid
                                                <span> On @item.created_date</span>
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        }
                                    </td>
                                    <td class="text-white" style="background:@bgColor">

                                        <div style="display:flex;">
                                            <div class="dropdown mb-1">
                                                <button class="btn text-white border border-white py-1 "
                                                        id="chat_with_dropdown1" type="button" data-bs-toggle="dropdown"
                                                        aria-expanded="false">
                                                    <i class="bi bi-person me-2 d-none d-sm-inline"></i>
                                                    <span>
                                                        Patient
                                                    </span>
                                                </button>
                                            </div>
                                            <div class="dropdown">
                                                <button class="btn text-white border border-white py-1 "
                                                        id="chat_with_dropdown2" type="button" data-bs-toggle="dropdown"
                                                        aria-expanded="false">
                                                    <i class="fa-solid fa-user-doctor me-2 d-none d-sm-inline"></i>
                                                    <span>
                                                        Provider
                                                    </span>
                                                </button>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-white" style="background:@bgColor">
                                        <div>
                                            <div class="dropdown">
                                                <button class="btn text-white border border-white py-1 "
                                                        id="chat_with_dropdown2" type="button" data-bs-toggle="dropdown"
                                                        aria-expanded="false">
                                                    <span>
                                                        Action
                                                    </span>
                                                </button>
                                                <ul class="dropdown-menu table_dropdowns">
                                                    <li>
                                                        <button class="dropdown-item" onclick="pendingViewCase(@item.reqid)">
                                                            <i class="fa-brands fa-searchengin"></i>
                                                            View Case
                                                        </button>
                                                    </li>
                                                    <li>
                                                        <button class="dropdown-item" onclick="pendingViewUploads(@item.reqid)">
                                                            <i class="fa-solid fa-file-arrow-up"></i>
                                                            View Uploads
                                                        </button>
                                                    </li>
                                                    <li>
                                                        <button class="dropdown-item" onclick="pendingViewNote(@item.reqid)">
                                                            <i class="fa-solid fa-book"></i>
                                                            View Notes
                                                        </button>
                                                    </li>
                                                    <li>
                                                        <button class="dropdown-item" onclick="transferCase(@item.reqid)">
                                                            <i class="fa-regular fa-file-lines"></i>
                                                            Transfer
                                                        </button>
                                                    </li>
                                                    <li>
                                                        <button class="dropdown-item" onclick="clearCase(@item.reqid)">
                                                            <i class="fa-regular fa-circle-xmark"></i>
                                                            Clear Case
                                                        </button>
                                                    </li>
                                                    <li>
                                                        <button class="dropdown-item" onclick="sendAgreement(@item.reqid)">
                                                            <i class="fa-regular fa-file-lines"></i>
                                                            Send Agreement
                                                        </button>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            
                        }
                    </tbody>
                    </table>
                }
                else
                {
                    <table class="table">
                        <thead id="table-heading">
                            <tr>
                                <th scope="col" class="dark-mode2">Name</th>
                                <th scope="col" class="dark-mode2">Date Of Birth</th>
                                <th scope="col" class="dark-mode2">Requestor</th>
                                <th scope="col" class="dark-mode2">Physician Name</th>
                                <th scope="col" class="dark-mode2">Date Of Service</th>
                                <th scope="col" class="dark-mode2">Phone</th>
                                <th scope="col" class="dark-mode2">Address</th>
                                <th scope="col" class="dark-mode2">Notes</th>
                                <th scope="col" class="dark-mode2">Chat With</th>
                                <th scope="col" class="dark-mode2">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="10" style="text-align:center;">No Request Found</td>
                            </tr>
                        </tbody>
                    </table>
                }
            </div>
        </div>

        <div class="accordion-item mt-3 d-block d-md-none" style="background-color:var(--bs-accordion-active-bg)">
             @if (Model.data.Count() > 0)
            {
                <table class="table" id="tableDataMainPendingTwo" width="100%">

                    <thead>
                        <tr>
                            <th class="d-none">

                            </th>
                            <th class="d-none">

                            </th>
                        </tr>
                    </thead>

                    @{
                        var count = 0;
                    }
                    @foreach (var item in Model.data)
                    {
                        if (item.status == 2)
                        {
                            var bgColor = "He";
                            var role = "hello";

                            @if (item.request_type_id == 1)
                            {
                                bgColor = "#60be5e";
                                role = "Patient";
                            }
                            else if (item.request_type_id == 2)
                            {
                                bgColor = "#e69232";
                                role = "FamilyFriend";
                            }
                            else if (item.request_type_id == 3)
                            {
                                bgColor = "#0b7ebf";

                                role = "Concierge";
                            }
                            else if (item.request_type_id == 4)
                            {
                                bgColor = "#d76879";
                                role = "Business";
                            }


                            <tr style="display: flex;flex-direction: column" class="@role">
                                <td>
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#div-@count" aria-expanded="false" aria-controls="flush-collapseOne">
                                        <span class="d-flex flex-column" style="width:100%">
                                            <span class="d-flex justify-content-between">
                                                <span class="mb-3">@item.first_name @item.last_name</span>
                                                <span>
                                                    <div class="d-flex align-items-center">
                                                        <div class="pe-2">@role</div>
                                                        <i class="fa-solid fa-circle" style="color:@bgColor"></i>
                                                    </div>
                                                </span>
                                            </span>
                                            <span class="d-flex align-items-center justify-content-between mb-3">
                                                <span>
                                                    @item.street,<br>
                                                    @item.city
                                                </span>
                                                <span class="btn btn-outline-primary" style="font-size:12px;cursor:pointer">Map Location</span>

                                            </span>

                                        </span>

                                    </button>
                                </h2>
                            </td>
                            <td style="z-index:5">
                                <div id="div-@count" style="position:relative" class="accordion-collapse collapse" data-bs-parent="#accordionFlushExample">
                                    <div class="accordion-body mt-1">
                                        <i class="fa-regular fa-calendar-days"></i> Date of Birth: @item.str_month @item.int_date, @item.int_year
                                    </div>
                                    <div class="accordion-body mt-1">
                                        <i class="fa-regular fa-envelope"></i> Email: @item.email
                                    </div>
                                    <div class="accordion-body mt-1">
                                        <i class="fa-solid fa-phone"></i> Patient: @item.mobile_num
                                    </div>
                                    <div class="accordion-body mt-1">
                                        <i class="fa-solid fa-phone"></i> Transfer: @item.notes
                                    </div>
                                    <div class="accordion-body mt-1">
                                        <i class="fa-solid fa-phone"></i> Date of Service: @item.created_date
                                    </div>
                                    <div class="accordion-body mt-1">
                                        <i class="fa-regular fa-user"></i> Physician: @item.phy_name
                                    </div>
                                    <div class="accordion-body mt-1">
                                        <i class="fa-regular fa-user"></i> Requestor: @item.requestor_fname
                                    </div>
                                    <div class="accordion-body">
                                        <span class="d-flex flex-column">
                                            <span class="d-flex justify-content-between mt-1">
                                                <button class=" accBtn me-2" style="background-color:purple!important;width:150px;color:white;border-radius:35px;" onclick="sendAgreement(@item.reqid)">Send Agreement</button>
                                                <button class=" accBtn" style="background-color:red!important;width:150px;color:white;border-radius:35px;" onclick="pendingViewNote(@item.reqid)">View Notes</button>
                                            </span>
                                            <span class="d-flex justify-content-between mt-1">
                                                <button class="accBtn me-2" style="background-color:green!important;width:150px;color:white;border-radius:35px;" onclick="transferCase(@item.reqid)">Transfer</button>
                                                    <button class=" accBtn" style="background-color:red!important;width:150px;color:white;border-radius:35px;" onclick="pendingViewUploads(@item.reqid)">View Uploads</button>
                                            </span>
                                            <span class="d-flex justify-content-between mt-1">
                                                <button class=" accBtn" style="background-color:green!important;width:150px;color:white;border-radius:35px;" onclick="clearCase(@item.reqid)">Clear Case</button>
                                                <button class=" accBtn" style="background-color:green!important;width:150px;color:white;border-radius:35px;">Email</button>
                                            </span>
                                                <button class="accBtn me-2" style="width:115px;border-radius:35px;position:absolute;top:-36px;right:0px;" onclick="pendingViewCase(@item.reqid)">View Case</button>
                                        </span>
                                    </div>



                                </div>
                            </td>
                        </tr>

                        count++;
                    }
                }

                </table>
            }
            else
            {
                <table class="table">
                    <thead id="table-heading">
                        <tr>
                            <th scope="col" class="dark-mode2">Name</th>
                            <th scope="col" class="dark-mode2">Date Of Birth</th>
                            <th scope="col" class="dark-mode2">Requestor</th>
                            <th scope="col" class="dark-mode2">Physician Name</th>
                            <th scope="col" class="dark-mode2">Date Of Service</th>
                            <th scope="col" class="dark-mode2">Phone</th>
                            <th scope="col" class="dark-mode2">Address</th>
                            <th scope="col" class="dark-mode2">Notes</th>
                            <th scope="col" class="dark-mode2">Chat With</th>
                            <th scope="col" class="dark-mode2">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="10" style="text-align:center;">No Request Found</td>
                        </tr>
                    </tbody>
                </table>
            }
        </div>



    </div>


    <div id="transferNote">
    </div>

    <div id="clearCase">
    </div>

    <div id="sendAgreement">
    </div>

    <div id="sendLinkPendingPopUp">
    </div>

    <div id="requestSupportPendingPopUp">
    </div>
</div>



<script>


    function tableFilter2(typeId) {
        $.ajax({
            method: "GET",
            url: "/adminDashboard/tableRecords2",
            traditional: true,
            contentType: "application/json",
            data: { arr: [2], typeId: typeId },
            success: function (result) {
                $("#myTabContent1").html(result);
                $("#Pending-tab-pane").addClass("show active");
            },

            error: function () {
                alert("Error loading partial view");
            },
        });
    }

    $(document).ready(function () {
        $('#tableDataMainPending').DataTable({
            "initComplete": function (settings, json) {

                $('#my-search-input-pending').val(settings.oPreviousSearch.sSearch);

                $('#my-search-input-pending').on('keyup', function () {
                    var searchValue = $(this).val();
                    settings.oPreviousSearch.sSearch = searchValue;
                    settings.oApi._fnReDraw(settings);
                });
            },
            "lengthMenu": [[5, 10, -1], [5, 10, "All"]],
            "pageLength": 5,
            "order": [[4, "desc"]],
            "columns": [{ "searchable": true }, { "searchable": false }, { "searchable": true }, { "searchable": false }, { "searchable": false }, { "searchable": false }, { "searchable": false }, { "searchable": false }, { "searchable": false }, { "searchable": false }],

            language: {
                oPaginate: {
                    sNext: '<i class="bi bi-caret-right-fill text-info"></i>',
                    sPrevious: '<i class="bi bi-caret-left-fill text-info"></i>'

                }
            }
        });
        // $('.dataTables_length').hide();
        $('.dataTables_filter').hide();
    });
    
    $(document).ready(function () {

        $('#tableDataMainPendingTwo').DataTable({
            "initComplete": function (settings, json) {

                $('#my-search-input-pending').val(settings.oPreviousSearch.sSearch);

                $('#my-search-input-pending').on('keyup', function () {
                    var searchValue = $(this).val();
                    settings.oPreviousSearch.sSearch = searchValue;
                    settings.oApi._fnReDraw(settings);
                });
            },
            "lengthMenu": [[5, 10, -1], [5, 10, "All"]],
            "pageLength": 5,
            language: {
                oPaginate: {
                    sNext: '<i class="bi bi-caret-right-fill text-info"></i>',
                    sPrevious: '<i class="bi bi-caret-left-fill text-info"></i>'

                }
            }
        });
        // $('.dataTables_length').hide();
        $('.dataTables_filter').hide();
    });



    function viewCaseClick(a) {

        console.log(a)
        let action = "/adminDashboard" + "/" + "newViewCase"
        $.ajax({
            url: action,
            type: 'GET',
            data: { req: a },
            success: function (result) {
                $('#myTabContent1').html(result);
            },
            error: function () {
                alert('Error loading partial view');
            }
        });
    }


    function transferCase(reqid) {
        let action = "/adminDashboard" + "/" + "transferCase"
            event.preventDefault();
            $.ajax({
                url: action,
                type: 'GET',
                data: { req: reqid },
                success: function (result) {
                    console.log(result)
                $('#transferNote').html(result);
                    $('#newRequestModalThree').modal('show');

                },
                error: function () {
                    alert('Error loading partial view');
                }
            });
    }
    
    
    
    function clearCase(reqid) {
        let action = "/adminDashboard" + "/" + "clearCase"
            event.preventDefault();
            $.ajax({
                url: action,
                type: 'GET',
                data: { req: reqid },
                success: function (result) {
                    console.log(result)
                $('#clearCase').html(result);
                    $('#newRequestModalFour').modal('show');

                },
                error: function () {
                    alert('Error loading partial view');
                }
            });
    }


    function sendAgreement(reqId) {
        let action = "/adminDashboard" + "/" + "sendAgreement"
        $.ajax({
            url: action,
            type: 'GET',
            data: { req: reqId },
            success: function (result) {
                $("#sendAgreement").html(result);
                $("#newRequestModelFive").modal("show");
            },
            error: function () {
                alert("Error loading partial view");
            }
        });
    }

    function newSendLinkPending() {
        let action = "/adminDashboard" + "/" + "sendLinkPopUp"
        $.ajax({
            url: action,
            type: 'GET',
            success: function (result) {
                $('#sendLinkPendingPopUp').html(result);
                $('#sendLinkPopUpOne').modal('show');

            },
            error: function () {
                alert('Error loading partial view');
            }
        });
    }


    function requestSupportPending() {
        console.log("hi")
        let action = "/adminDashboard" + "/" + "requestSupportPopUp"
        event.preventDefault();
        $.ajax({
            url: action,
            type: 'GET',
            success: function (result) {
                console.log(result)
                $('#requestSupportPendingPopUp').html(result);
                $('#requestSupportPopUpOne').modal('show');

            },
            error: function () {
                alert('Error loading partial view');
            }
        });
    }



    function createRequestPending() {
        $.ajax({
            url: "/adminDashboard/createRequest",
            type: 'GET',
            success: function (result) {
                $("#content").html(result);
            },
            error: function () {
                alert('Error loading partial view');
            }
        });
    }


    //*************************************************************Editing View************************************/


    function pendingViewNote(reqid) {
        console.log(reqid)
        $.ajax({
            url: "/adminDashboard/newViewNote",
            data: { data: reqid },
            type: 'GET',
            success: function (result) {
                $("#content").html(result);
            },
            error: function () {
                alert('Error loading partial view');
            }
        });
    }

    function pendingViewCase(reqid) {
        console.log(reqid)
        $.ajax({
            url: "/adminDashboard/newViewCase",
            data: { data: reqid },
            type: 'GET',
            success: function (result) {
                $("#content").html(result);
            },
            error: function () {
                alert('Error loading partial view');
            }
        });
    }
    
    function pendingViewUploads(reqid) {
        console.log(reqid)
