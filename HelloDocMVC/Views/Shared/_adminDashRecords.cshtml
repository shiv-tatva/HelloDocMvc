@model DAL_Data_Access_Layer_.CustomeModel.GetRecordsModel;<link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" /><div class="w-100 px-3 pb-3 px-sm-5">    <h4 class="my-2">Patient History</h4>    <div class="shadow rounded border ">        <form id="patientRecordForm">            <div class="row p-3">                <div class="form-floating mb-3 col-sm-6 col-md-3 col-lg-3 col-xl-3 d-flex">                    <input type="text" class="form-control bg-transparent dark-mode2" id="first_name" placeholder="First Name" asp-for="@Model.searchRecordOne">                    <label for="first_name" class="ms-2">First Name</label>                </div>                <div class="form-floating mb-3 col-sm-6 col-md-3 col-lg-3 col-xl-3 d-flex">                    <input type="text" class="form-control bg-transparent dark-mode2" id="last_name" placeholder="Last Name" asp-for="@Model.searchRecordTwo">                    <label for="last_name" class="ms-2  ">Last Name</label>                </div>                <div class="form-floating mb-3 col-sm-6 col-md-3 col-lg-3 col-xl-3 d-flex">                    <input type="email" class="form-control dark-mode2" id="email" placeholder="Email" aria-label="Email" asp-for="@Model.searchRecordThree">                    <label class="ms-2  " for="Email">Email</label>                </div>                <div class="form-floating mb-3 col-sm-6 col-md-3 col-lg-3 col-xl-3 d-flex">                    <input class="form-control dark-mode2" type="search" placeholder="Phone Number" aria-label="Search" id="phone" asp-for="@Model.searchRecordFour">                    <label class="  ms-2">Phone Number</label>                </div>                <div class="d-flex justify-content-end">                    <button class="btn btn-outline-info me-2 px-3 py-2" type="button" id="clear_button" onclick="records()">                        Clear                    </button>                    <button class="btn btn-info text-white ms-1 px-3 py-2" onclick="patientRecordSearch()" type="button"                            id="search_button">                        Search                    </button>                </div>            </div>        </form>        <div class="table-responsive d-none d-lg-block p-3" style="min-height:50vh">            <table class="table RecordsTab">                <thead class="table-active p-2">                    <tr class="dark-mode2">                        <th scope="col" class="text-center">First Name</th>                        <th scope="col" class="text-center">Last Name</th>                        <th scope="col" class="text-center">Email</th>                        <th scope="col" class="text-center">Phone</th>                        <th scope="col" class="text-center">Address</th>                        <th scope="col">Actions</th>                    </tr>                </thead>                <tbody>                    @foreach (var obj in Model.users)
                    {                        <tr class="dark-mode2">                            <td class="text-center">@obj.Firstname</td>                            <td class="text-center">@obj.Lastname</td>                            <td class="text-center">@obj.Email</td>                            <td class="text-center">@obj.Mobile</td>                            @{                                var address = @obj.Street + " " + @obj.City + " " + @obj.State + " " + @obj.Zipcode;                            }                            <td class="text-center">@address</td>                            <td>                                <button style="cursor : pointer" class="btn btn-outline-info rounded-2"                                        aria-expanded="false" onclick="GetPatientRecordExplore(@obj.Userid)">                                    Explore                                </button>                            </td>                        </tr>                    }                </tbody>            </table>        </div>        <div class="d-block d-lg-none">            <div class="accordion container-fluid p-0" id="accordionPanelsStayOpenExample">                <table class="w-100 RecordsTab">                    <thead>                        <tr class="dark-mode2">                            <th class="d-none"></th>                            <th class="d-none"></th>                        </tr>                    </thead>                    @{                        var counter = 1;                    }                    <tbody>                        @if (Model.users != null)
                        {                            @foreach (var obj in Model.users)
                            {                                <tr class="d-flex flex-column dark-mode2">                                    <td>                                        <h2 class="accordion-header" id="flush-heading@(counter)"></h2>                                        <div class="accordion-button collapsed d-flex flex-column pb-0"                                             data-bs-toggle="collapse" data-bs-target="#flush-collapse@(counter)"                                             aria-expanded="false" aria-controls="flush-collapse@(counter)">                                            <div class="w-100 ">                                                <span class="fw-bolder">                                                    @{                                                        var Name = @obj.Firstname + " " + @obj.Lastname;                                                    }                                                    @Name                                                </span>                                            </div>                                            <div class="w-100 mt-2">                                                <div class="">                                                    @obj.Mobile                                                </div>                                            </div>                                        </div>                                    </td>                                    <td>                                        <div id="flush-collapse@(counter)" class="accordion-collapse collapse"                                             aria-labelledby="flush-heading@(counter)" data-bs-parent="#accordionFlushExample">                                            <div class="accordion-body main-flex pt-2">                                                <div class="w-100">                                                    @{                                                        var address = @obj.Street + " " + @obj.City + " " + @obj.State + " " + @obj.Zipcode;                                                    }                                                    <div class="">                                                        <span class="fw-bolder">Email: </span><span class="mobile-font2">                                                            @obj.Email                                                        </span>                                                    </div>                                                    <div class="">                                                        <span class="fw-bolder">Phone: </span> @obj.Mobile                                                    </div>                                                    <div class="">                                                        <span class="fw-bolder">Address: </span> @address                                                    </div>                                                    <div class="inner-flex d-flex mt-2 justify-content-end">                                                        <button style="cursor : pointer" class="btn btn-outline-info rounded-2"                                                                aria-expanded="false"                                                                onclick="GetPatientRecordExplore(@obj.Userid)">                                                            Explore                                                        </button>                                                    </div>                                                </div>                                            </div>                                        </div>                                    </td>                                </tr>                                counter++;
                            }                        }                    </tbody>                </table>            </div>        </div>    </div></div><script>    $(document).ready(function () {        $('.RecordsTab').DataTable({            "initComplete": function (settings, json) {                $('#my-search-input').val(settings.oPreviousSearch.sSearch);                $('#my-search-input').on('keyup', function () {                    var searchValue = $(this).val();                    settings.oPreviousSearch.sSearch = searchValue;                    settings.oApi._fnReDraw(settings);                });            },            "lengthMenu": [[5, 10, -1], [5, 10, "All"]],            "pageLength": 5,            language: {                oPaginate: {                    sNext: '<i class="bi bi-caret-right-fill text-info"></i>',                    sPrevious: '<i class="bi bi-caret-left-fill text-info"></i>'                }            }        });        $('.dataTables_filter').hide();    });    function patientRecordSearch(){        $.ajax({            url: "/adminDashboard/records",            data: $("#patientRecordForm").serializeArray(),            type: 'POST',            success: function (result) {                $("#content").html(result);
            },            error: function () {                alert("error");
            },        });
    }    function GetPatientRecordExplore(userId){        $.ajax({            url: "/adminDashboard/GetPatientRecordExplore",            data: {userId : userId},            type: 'POST',            success: function (result) {                $("#content").html(result);            },            error: function () {                alert("error");            },        });    }    function clearAll() {        let a = document.getElementsByTagName("input")        for (let i = 0; i < a.length; i++) {            a[i].value = "";        }        let b = document.getElementsByTagName("textarea")        for (let i = 0; i < b.length; i++) {            b[i].value = "";        }    }</script>