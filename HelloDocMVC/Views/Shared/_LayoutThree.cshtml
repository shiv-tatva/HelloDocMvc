        function darkMode() {

            let isDarkModeTwo = localStorage.getItem('darkMode') === 'true'
            let moon = document.getElementById("darkModeMoon");

            if (isDarkModeTwo) {
                moon.classList.remove("fa-sun")
                moon.classList.add("fa-moon")
            }else{
                moon.classList.add("fa-sun")
                moon.classList.remove("fa-moon")
            }

            const body = document.body;
            body.classList.toggle('dark-mode');

            let nav = document.getElementById("navMain");
            nav.classList.toggle("dark-mode")

            let profileBtn = document.getElementById("profileMain")
            profileBtn.classList.toggle("dark-mode")

            const isDarkMode = body.classList.contains('dark-mode');

            localStorage.setItem('darkMode', isDarkMode);

        }

        window.onload = function () {
            const isDarkMode = localStorage.getItem('darkMode') === 'true';
            let nav = document.getElementById("navMain");
            let profileBtn = document.getElementById("profileMain");
            let moon = document.getElementById("darkModeMoon");

            if (isDarkMode) {
                document.body.classList.add('dark-mode');
                nav.classList.add('dark-mode');
                profileBtn.classList.add('dark-mode');
                moon.classList.remove("fa-moon")
                moon.classList.add("fa-sun")
            }
        }


        function profileBtn() {
            let a = document.getElementById("profileMain");
            let b = document.getElementById("dashboardMain")

            a.style.color = "skyblue";
            b.style.color = "white"
        }
        
        function dashboardBtn() {
            let a = document.getElementById("dashboardMain");
            let b = document.getElementById("profileMain")

            a.style.color = "white";
            b.style.color = "skyblue"
