<script>

    function tableFilter1(typeId) {
        $.ajax({
            method: "GET",
            url: "/Provider/tableRecords",
            traditional: true,
            contentType: "application/json",
            data: { arr: [1], typeId: typeId ,flag:20},
            success: function (result) {
                $("#myTabContent1").html(result);
                $("#New-tab-pane").addClass("show active");
            },

            error: function () {
                toastr.error("Error To Load Partial View");
            },
        });
    }

    function regionClick(regionId) {
        console.log(regionId)
    }


    function calcelCase(reqid) {

        console.log("CLicked")

        let action = "/adminDashboard" + "/" + "cancelCase"
        event.preventDefault();
        $.ajax({
            url: action,
            type: 'GET',
            data: { req: reqid },
            success: function (result) {
                console.log(result)
                $('#contentCancelNote').html(result);
                $('#newRequestModal').modal('show');

            },
            error: function () {
                toastr.error("Error To Load Partial View");
            }
        });
    }

    function assignCase(reqid) {
        let action = "/adminDashboard" + "/" + "assignCase"
        event.preventDefault();
        $.ajax({
            url: action,
            type: 'GET',
            data: { req: reqid },
            success: function (result) {
                console.log(result)
                $('#contentAssignNote').html(result);
                $('#newRequestModalTwo').modal('show');

            },
            error: function () {
                toastr.error("Error To Load Partial View");
            }
        });
    }

    function blockCase(reqid) {
        let action = "/adminDashboard" + "/" + "blockCase"
        event.preventDefault();
        $.ajax({
            url: action,
            type: 'GET',
            data: { req: reqid },
            success: function (result) {
                console.log(result)
                $('#contentBlockNote').html(result);
                $('#newRequestModalThree').modal('show');

            },
            error: function () {
                toastr.error("Error To Load Partial View");
            }
        });
    }



    $(document).ready(function () {

        $('#tableDataMain').DataTable({
            "initComplete": function (settings, json) {

                $('#my-search-input').val(settings.oPreviousSearch.sSearch);

                $('#my-search-input').on('keyup', function () {
                    var searchValue = $(this).val();
                    settings.oPreviousSearch.sSearch = searchValue;
                    settings.oApi._fnReDraw(settings);
                });
            },
            "lengthMenu": [[5, 10, -1], [5, 10, "All"]],
            "pageLength": 5,
            // "order": [[3, "desc"]],
            // "columns": [{ "searchable": true }, { "searchable": false }, { "searchable": true }, { "searchable": false }, { "searchable": false }, { "searchable": false }, { "searchable": false }, { "searchable": false }, { "searchable": false }],
            language: {
                oPaginate: {
                    sNext: '<i class="bi bi-caret-right-fill text-info"></i>',
                    sPrevious: '<i class="bi bi-caret-left-fill text-info"></i>'

                }
            }
        });
        // $('.dataTables_length').hide();
        $('.dataTables_filter').hide();
    });


    $(document).ready(function () {

        $('#tableDataMainTwo').DataTable({
            "initComplete": function (settings, json) {

                $('#my-search-input').val(settings.oPreviousSearch.sSearch);

                $('#my-search-input').on('keyup', function () {
                    var searchValue = $(this).val();
                    settings.oPreviousSearch.sSearch = searchValue;
                    settings.oApi._fnReDraw(settings);
                });
            },
            "lengthMenu": [[5, 10, -1], [5, 10, "All"]],
            "pageLength": 5,
            language: {
                oPaginate: {
                    sNext: '<i class="bi bi-caret-right-fill text-info"></i>',
                    sPrevious: '<i class="bi bi-caret-left-fill text-info"></i>'

                }
            }
        });
        // $('.dataTables_length').hide();
        $('.dataTables_filter').hide();
    });


    function newSendLink() {
        let action = "/adminDashboard" + "/" + "sendLinkPopUp"
        $.ajax({
            url: action,
            type: 'GET',
            success: function (result) {
                $('#sendLinkPopUp').html(result);
                $('#sendLinkPopUpOne').modal('show');

            },
            error: function () {
                toastr.error("Error To Load Partial View");
            }
        });
    }


    function requestSupport() {
        console.log("hi")
        let action = "/adminDashboard" + "/" + "requestSupportPopUp"
        event.preventDefault();
        $.ajax({
            url: action,
            type: 'GET',
            success: function (result) {
                console.log(result)
                $('#requestSupportPopUp').html(result);
                $('#requestSupportPopUpOne').modal('show');

            },
            error: function () {
                toastr.error("Error To Load Partial View");
            }
        });
    }



    function createRequest() {
        $.ajax({
            url: "/adminDashboard/createRequest",
            type: 'GET',
            success: function (result) {
                $("#content").html(result);
            },
            error: function () {
                toastr.error("Error To Load Partial View");
            }
        });
    }


    //*************************************************************Editing View************************************/

    function providerAcceptBtn(reqId){
        $.ajax({
            url: "/Provider/ProivderAccept",
            type: 'POST',
            data: { reqId: reqId },
            success: function (result) {
                DashboardMain();
                toastr.success("Request Accepted Successfully");
            },
            error: function () {
                toastr.error("Error");
            },
        });
    }


    function newViewNote(reqid) {
        console.log(reqid)
        $.ajax({
            url: "/Provider/newViewNote",
            data: { data: reqid },
            type: 'GET',
            success: function (result) {
                $("#content").html(result);
            },
            error: function () {
                toastr.error("Error To Load Partial View");
            }
        });
    }



    function newViewCase(reqid) {
        console.log(reqid)
        $.ajax({
            url: "/Provider/newViewCase",
            data: { data: reqid },
            type: 'GET',
            success: function (result) {
                $("#content").html(result);
            },
            error: function () {
                toastr.error("Error To Load Partial View");
            }
        });
    }

    function newSendLinkInActive() {
        let action = "/Provider" + "/" + "sendLinkPopUp"
        $.ajax({
            url: action,
            type: 'GET',
            success: function (response) {
                console.log(response);
                $('#sendLinkActivePopUp').html(response);
                $('#sendLinkPopUpOne').modal('show');

            },
            error: function () {
                toastr.error("Error To Load Partial View");
            }
        });
    }

    function createRequestActive() {
        $.ajax({
            url: "/Provider/createRequest",
            type: 'GET',
            success: function (result) {
                $("#content").html(result);
            },
            error: function () {
                toastr.error("Error To Load Partial View");
            }
        });
    }

    function exportBtnNew() {
        // Get the HTML content of the table
        var htmlContent = $("#tableParentDiv").html();
        console.log(htmlContent)

        // Set the modified HTML content to the input value
        $("input[name='GridHtml']").val(htmlContent);
    }

    function regionClick() {

        var value = $("#regionFilter").val();
        console.log(value);

        $.ajax({
            url: "/adminDashboard/RegionFilter",
            data: { arr: [1], regionId: value },
            traditional: true,
            contentType: "application/json",
            type: 'GET',
            success: function (result) {
                $("#myTabContent1").html(result);
                $("#New-tab-pane").addClass("show active");
                $("#regionFilter").val(value);
            },
            error: function () {
                toastr.error("Error To Load Partial View");
            },
        });

    }

    $(document).ready(function () {
        $("#my-search-input").bind("keypress", function (e) {
            if (e.keyCode == 13) {
                return false;
            }
        });
    });

    var REQUESTID = 0;
    var ADMINID = 0;
    var PROVIDERID = 0;
    function ChatWith(x, y, z) {
        REQUESTID = x;
        ADMINID = z;
        PROVIDERID = y;
        chatafter();
    }
    function chatafter() {
        $.ajax({
            method: "GET",
            url: "/Home/Chat",
            data: {
                RequestId: REQUESTID,
                AdminID: ADMINID,
                ProviderId: PROVIDERID,

            },
            success: function (data) {
                console.log(data);
                $('#partialViewForChat').html(data);
                $('#offcanvasRight').offcanvas("show");
            },
            error: function () {
                console.log("Function Fail");
            }

        });
    }

</script>
