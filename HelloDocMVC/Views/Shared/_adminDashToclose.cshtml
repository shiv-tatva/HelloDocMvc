                                                    id="chat_with_dropdown2" type="button" data-bs-toggle="dropdown"
                                                    aria-expanded="false">
                                                <span>
                                                    Action
                                                </span>
                                            </button>
                                            <ul class="dropdown-menu table_dropdowns">
                                                <li>
                                                    <button class="dropdown-item" onclick="location.href='@Url.Action("newViewCase","adminDashboard", new {data = item.reqid})'">
                                                        <i class="fa-brands fa-searchengin"></i>
                                                        View Case
                                                    </button>
                                                </li>
                                                <li>
                                                    <button onclick="location.href='@Url.Action("pendingViewUploadMain","adminDashboard", new {data = item.reqid})'" class="dropdown-item" href="#">
                                                        <i class="fa-solid fa-file-arrow-up"></i>
                                                        View Uploads
                                                    </button>
                                                </li>
                                                <li>
                                                    <button class="dropdown-item" onclick="location.href='@Url.Action("newViewNote","adminDashboard", new {data = item.reqid})'">
                                                        <i class="fa-solid fa-book"></i>
                                                        View Notes
                                                    </button>
                                                </li>
                                                <li>
                                                    <button class="dropdown-item" href="#">
                                                        <i class="fa-solid fa-file-circle-check"></i>
                                                        Orders
                                                    </button>
                                                </li>
                                                <li>
                                                    <button class="dropdown-item" href="#">
                                                        <i class="fa-regular fa-circle-xmark"></i>
                                                        Close Case
                                                    </button>
                                                </li>
                                                <li>
                                                    <button class="dropdown-item" href="#">
                                                        <i class="fa-regular fa-file-lines"></i>
                                                        Doctors Note
                                                    </button>
                                                </li>
                                                <li>
                                                    <button class="dropdown-item" href="#">
                                                        <i class="fa-regular fa-circle-xmark"></i>
                                                        Clear Case
                                                    </button>
                                                </li>
                                                <li>
                                                    <button class="dropdown-item" href="#">
                                                        <i class="fa-regular fa-file-lines"></i>
                                                        Encounter
                                                    </button>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

