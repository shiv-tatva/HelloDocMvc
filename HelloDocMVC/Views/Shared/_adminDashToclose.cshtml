            <thead>
                <tr>
                    <th class="d-none">

                    </th>
                    <th class="d-none">

                    </th>
                </tr>
            </thead>

        @{
            var count = 0;

        }
        @foreach (var item in Model.data)
        {
            if (item.status == 3 || item.status == 7 || item.status == 8)
            {
                var bgColor = "He";
                var role = "hello";

                @if (item.request_type_id == 1)
                {
                    bgColor = "#60be5e";
                    role = "Patient";
                }
                else if (item.request_type_id == 2)
                {
                    bgColor = "#e69232";
