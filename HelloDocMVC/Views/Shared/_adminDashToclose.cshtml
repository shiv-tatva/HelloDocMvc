                        <div class="accordion-body mt-1">
                            <i class="fa-regular fa-envelope"></i> Email: @item.email
                        </div>
                        <div class="accordion-body mt-1">
                            <i class="fa-solid fa-phone"></i> Transfer: @item.notes
                        </div>
                        <div class="accordion-body mt-1">
                            <i class="fa-solid fa-phone"></i> Date of Service: @item.created_date
                        </div>
                        <div class="accordion-body mt-1">
                            <i class="fa-regular fa-user"></i> Physician: @item.phy_name
                        </div>
                        <div class="accordion-body mt-1">
                            <i class="fa-regular fa-user"></i> Region: @item.region
                        </div>
                        <div class="accordion-body">
                            <span class="d-flex flex-column">
                                <span class="d-flex justify-content-between mt-1">
                                    <button class=" accBtn me-2" style="background-color:purple!important;width:150px;color:white;border-radius:35px;">Clear Case</button>
                                    <button class=" accBtn" style="background-color:red!important;width:150px;color:white;border-radius:35px;">View Notes</button>
                                </span>
                                <span class="d-flex justify-content-between mt-1">
                                    <button class="accBtn me-2" style="background-color:green!important;width:150px;color:white;border-radius:35px;">Doctors Note</button>
                                    <button class=" accBtn" style="background-color:red!important;width:150px;color:white;border-radius:35px;">View Uploads</button>
                                </span>
                                <span class="d-flex justify-content-between mt-1">
                                    <button class=" accBtn" style="background-color:green!important;width:150px;color:white;border-radius:35px;">Enacounter</button>
                                    <button class=" accBtn" style="background-color:green!important;width:150px;color:white;border-radius:35px;">Clear Case</button>
                                </span>
                                <span class="d-flex justify-content-between mt-1">
                                    <button class=" accBtn" style="background-color:green!important;width:150px;color:white;border-radius:35px;">Clear Case</button>
                                </span>
                            </span>
                        </div>



                    </div>
                    </td>
                </tr>
                
                count++;
            }
        }

        </table>
    </div>

  
</div>



