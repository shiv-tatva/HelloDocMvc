                }
            }
        });
        // $('.dataTables_length').hide();
        $('.dataTables_filter').hide();
    });



    function viewCaseClick(a) {

        console.log(a)
        let action = "/adminDashboard" + "/" + "newViewCase"
        $.ajax({
            url: action,
            type: 'GET',
            data: { req: a },
            success: function (result) {
                $('#content').html(result);
            },
            error: function () {
                alert('Error loading partial view');
            }
        });
    }


</script>



