            a[i].style.display = "table-row";
        }

        let b = document.getElementsByClassName("familyFriendLayout");

        for (let i = 0; i < b.length; i++) {
            b[i].style.display = "table-row";
        }

        let c = document.getElementsByClassName("conciergeLayout");

        for (let i = 0; i < c.length; i++) {
