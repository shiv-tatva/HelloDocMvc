                                       placeholder="Address2" aria-label="Address2">
                                <label class="ms-2 " for="floatingInputAddress2">Address2</label>
                            <span asp-validation-for="@Model._myProfile.addr2" class="text-danger"></span>
                            </div>
                            <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                                <input asp-for="@Model._myProfile.city" value="@Model._myProfile.city" type="text" class="dclass form-control dark-mode2" id="floatingInputCity"
                                       placeholder="City" aria-label="City">
                                <label class="ms-2 " for="floatingInputCity">City</label>
                            <span asp-validation-for="@Model._myProfile.city" class="text-danger"></span>
                            </div>
                            <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                            <select asp-for="@Model._myProfile.regionId" value="@Model._myProfile.regionId" class="dclass form-select regionDropdown dark-mode2" id="state" aria-label="Region">
                                @foreach (var obj in Model._RegionTable.ToList())

                                {
                                    <option value="@obj.Regionid">
                                        @obj.Name
                                    </option>
                                }
                            </select>
                            <label for="state" class="ms-2 ">State</label>
                            <span asp-validation-for="@Model._myProfile.regionId" class="text-danger"></span>
                            </div>
                            <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                                <input asp-for="@Model._myProfile.zip" value="@Model._myProfile.zip" type="number" class="dclass form-control dark-mode2" id="floatingInputZipCode"
                                       placeholder="Zip Code" aria-label="Zip Code">
                                <label class="ms-2  " for="floatingInputZipCode">Zip</label>
                            <span asp-validation-for="@Model._myProfile.zip" class="text-danger"></span>
                            </div>
                            <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                            <input asp-for="@Model._myProfile.altphone" value="@Model._myProfile.altphone" style="height:56px" id="phoneMyProfile2"
                                   class="dclass form-control dark-mode2 contact"
                                   aria-label="Contact"
                                   type="number" />
                            </div>
                        </div>
                        <div class="d-grid gap-2 d-flex justify-content-center  justify-content-md-end mb-3">
                            <button type="button" id="editBtn2" class="btn btn-info text-white EditBtn"
                                    onclick="enableFields2()">
                                Edit
                            </button>

                            <button onclick="closeCaseBillingInfo()" type="button" id="submitBtn2" class="btn btn-info text-white EditBtn">Save</button>

                            <button type="reset" id="cancelBtn2" class="btn btn-outline-info EditBtn"
                                    onclick="disableFields2()">
                                Cancel
                            </button>
                        </div>
                    </div>
                    </form>
                </div>
        </div>
    </div>
