    function resetPassTwo() {
        let payload = {
            password: $("#floatingPassword2").val(),
                flag: $("#flagValueOne").val(),
        };

         let action = "/adminDashboard" + "/" + "myProfile";

            $.ajax({
                url: action,
                type: 'POST',
                data: payload,
                success: function (result) {
                    if (result.isSend == true) {
                    toastr.success("Password Reset Successfully")
                    } else {
                    toastr.error("For reset password you need to enter new password");                   
                    }
                },
                error: function () {
                    alert("Error");
                },
            });
    }

    function closeCaseAdminInfo() {
        let payload = {
            fname: $("#floatingInputFirstAdmin").val(),
            lname: $("#floatingInputLastAdmin").val(),
            email: $("#floatingInputemailAdmin").val(),
            confirm_email: $("#floatingInputConfirmEmailAdmin").val(),
            mobile_no: $("#phoneMyProfile").val(),
            flag: $("#flagValueTwo").val(),
        };

        let action = "/adminDashboard" + "/" + "myProfile";

        $.ajax({
            url: action,
            type: 'POST',
            data: payload,
            success: function (result) {
                console.log(result)
                if (result.isSend == true) {
                    toastr.success("Data Updated")
                    $("#cancelBtn").click()
                    document.getElementById("userNameMain").innerHTML = result.userNameMyProfile;
                } else {
                    toastr.error("Change atleast one field");
                }
            },
            error: function () {
                alert("Error");
            },
        });
    }


    function closeCaseBillingInfo() {
        var payload = {
            addr1: $("#floatingInputAddress1").val(),
            addr2: $("#floatingInputAddress2").val(),
            city: $("#floatingInputCity").val(),
            zip: $("#floatingInputZipCode").val(),
            flag: $("#flagValueThree").val(),
        };

        $.ajax({
            url: "/adminDashboard/myProfile",
            type: 'POST',
            data: payload,
            success: function (result) {
                if (result.isSend == true) {
                    toastr.success("Data Updated")
                    $("#cancelBtn2").click();
                } else {
                    toastr.error("Change atleast one field"); 
                }
            },
            error: function () {
                alert("Error");
            },
        });
    }
</script>