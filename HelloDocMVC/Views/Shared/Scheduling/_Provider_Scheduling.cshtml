@model DAL_Data_Access_Layer_.CustomeModel.SchedulingCm


<div class="container-fluid" id="main">

    <div class="row bgcolor1">

        <div class=" col-12 col-sm-12 col-md-10 col-lg-8 mx-auto d-flex justify-content-start mb-2">
            <h4> Scheduling  </h4>

        </div>
        <div class="d-grid gap-2 col-12 col-sm-12 col-md-10 col-lg-8 mx-auto d-flex flex-column rounded-3 bgcolor mt-md-3 mt-2">

            <div class="d-md-flex justify-content-between align-items-center mb-3">
                <form role="search" class="d-flex align-items-center border border-rounded rounded border-info mb-3 me-md-3">
                    <i type="search" class="bi bi-search px-2" style="position: absolute;"></i>
                    <select class="form-select border-0 regionDropdown ps-5" aria-label="Default select example" onchange="filterPhysicianRegion(this.value)">
                        <option value="">All Region</option>
                        @foreach (var obj in Model.regions.ToList())
                        {
                            <option value="@obj.Regionid">
                                @obj.Name
                            </option>
                        }
                    </select>
                </form>
                <div class="d-flex justify-content-between align-items-center mb-md-3 mb-2">
                    <button type="button" class="btn btn-info text-light me-2 mobile-font2" onclick="GetOnCall(0)">Providers On Call</button>
                    <button type="button" class="btn btn-info text-light me-2 mobile-font2" onclick="ShiftReview(0,0)">Shifts for Review</button>
                    <button type="button" class="btn btn-info text-light mobile-font2" onclick="CreateNewShift()">Add New Shift</button>
                </div>
            </div>
            <div class="mt-md-2 fs-md-5 fs-6 fw-bold d-md-flex text-center" id="datediv">
                Something is wrong
            </div>

            <div class="mt-2 d-md-flex justify-content-end text-center">
                <div class="d-flex text-center justify-content-center align-items-center">
                    <div class="rounded-3 me-1 btnshiftscolor " style="background-color:pink;border-color:deeppink;"></div>
                    <small class="fw-bolder ms-1 me-2 mobile-font">Pending Shifts</small>
                    <div class="rounded-3 me-1 btnshiftscolor " style="background-color:lightgreen;border-color:darkgreen"></div>
                    <small class="fw-bolder ms-1 mobile-font">Approved Shifts</small>
                </div>
            </div>

            <div class=" d-md-flex justify-content-between align-items-center text-center">
                <div class="d-flex align-items-center justify-content-center mt-2 mb-3 text-center">
                    <button class="mx-2 bg-info rounded-5 d-flex justify-content-center align-items-center" style="height:30px;width:30px;border:none;" onclick="previousCalendar()"><i class="bi bi-chevron-left"></i></button>
                    <button class="upload-btn-wrapper bg-transparent fs-5 border-0 dark-mode2" id="dayBtnid">
                        <i class="bi bi-calendar-week"></i>
                        <div id="cal">
                            <input type="date" id="date-input" onchange="monthchange(1)" />
                            <div id="datepickerContainer" style="display:none;"></div>
                        </div>
                    </button>
                    <button class="upload-btn-wrapper bg-transparent fs-5 border-0 dark-mode2" id="weekBtnid">
                        <i class="bi bi-calendar-week"></i>
                        <div id="cal">
                            <input type="week" id="week-input" onchange="monthchange(2)" />
                        </div>
                    </button>
                    <button class="upload-btn-wrapper bg-transparent fs-5 border-0 dark-mode2" id="monthBtnid">
                        <i class="bi bi-calendar-week"></i>
                        <div id="cal">
                            <input type="month" id="month-input" onchange="monthchange(3)" />
                        </div>
                    </button>
                    <button class="mx-2 bg-info rounded-5 d-flex justify-content-center align-items-center" style="height:30px;width:30px;border:none;" onclick="nextCalendar()"><i class="bi bi-chevron-right"></i></button>
                </div>
                <div class="d-md-flex my-2 text-center">
                    <button class="btn btn-outline-info mx-1 scheduleBtn1" onclick="ShiftCalender('day');">Day</button>
                    <button class="btn btn-outline-info mx-1 scheduleBtn2" onclick="ShiftCalender('week');">Week</button>
                    <button class="btn btn-outline-info ms-1 scheduleBtn3" onclick="ShiftCalender('month');">Month</button>
                </div>
            </div>

            <div id="shiftTable"></div>



        </div>


    </div>
</div>

<div id="schedulingModals"></div>

<script>
    var date = new Date();

    var diff = date.getDay() - 0;
    var sunday = new Date(date.getTime() - diff * 24 * 60 * 60 * 1000);
    var saturday = new Date(sunday.getTime() + 6 * 24 * 60 * 60 * 1000);

    var regionid = 0;

    var schedulingtype;

    function filterPhysicianRegion(region) {
        regionid = region;
        switch (schedulingtype) {
            case 'month':

                ShiftCalender('month');
                break;

            case 'day':

                ShiftCalender('day');
                break;
            case 'week':

                ShiftCalender('week');
                break;
        }
    }


    ShiftCalender('week');


    function ShiftCalender(shifttype) {
        schedulingtype = shifttype;
        var datehere;
        var calendar = document.getElementById("cal");
        calendar.innerHTML = '';

        switch (schedulingtype) {
            case 'month':
                datehere = date.toLocaleDateString('en-US', { month: 'long' }) + ',' + date.getFullYear();
                calendar.innerHTML = '<input type="month" id="month-input" onchange="monthchange()"/>';
                $('.scheduleBtn3').addClass("btn-info text-white");
                $('.scheduleBtn1').removeClass("btn-info text-white");
                $('.scheduleBtn2').removeClass("btn-info text-white");
                $('#dayBtnid').hide();
                $('#weekBtnid').hide();
                $('#monthBtnid').show();
                break;
            case 'day':
                datehere = date.toLocaleDateString('en-US', { weekday: 'long' }) + ', ' + (date.toLocaleDateString('en-US', { month: 'long' })).substring(0, 3) + ' ' + date.getDate() + ', ' + date.getFullYear();
                calendar.innerHTML = '<input type="date" id="month-input" onchange="monthchange()"/>';
                $('.scheduleBtn1').addClass("btn-info text-white");
                $('.scheduleBtn3').removeClass("btn-info text-white");
                $('.scheduleBtn2').removeClass("btn-info text-white");
                $('#dayBtnid').show();
                $('#weekBtnid').hide();
                $('#monthBtnid').hide();
                break;
            case 'week':
                datehere = (sunday.toLocaleDateString('en-US', { month: 'long' })).substring(0, 3) + ' ' + sunday.getDate() + ' - ' + (saturday.toLocaleDateString('en-US', { month: 'long' })).substring(0, 3) + ' ' + saturday.getDate() + ' ' + saturday.getFullYear();
                calendar.innerHTML = '<input type="date" id="month-input" onchange="monthchange()"/>';
                $('.scheduleBtn2').addClass("btn-info text-white");
                $('.scheduleBtn1').removeClass("btn-info text-white");
                $('.scheduleBtn3').removeClass("btn-info text-white");
                $('#dayBtnid').hide();
                $('#weekBtnid').show();
                $('#monthBtnid').hide();

        }

        $.ajax({
            url: '/adminDashboard/loadshift',
            type: 'POST',
            data: { datestring: date.toISOString(), sundaystring: sunday.toISOString(), saturdaystring: saturday.toISOString(), shifttype: shifttype, regionid: regionid },
            success: function (data) {

                $('#shiftTable').html(data);
                $('#datediv').text(datehere);
            },
            error: function () {
                console.error('Error loading partial view.');
            }
        });
    }




    // function showcalender(filter) {
    //     if (filter == 1) {
    //         document.getElementById("date-input").showPicker();

    //     }
    //     if (filter == 2) {
    //         document.getElementById("week-input").showPicker();
    //     }
    //     if (filter == 3) {
    //         document.getElementById("month-input").showPicker();
    //     }
    // }

    function monthchange(filter) {
        if (filter == 1) {
            var selectmonth = document.getElementById("day-input").value;
            var year = parseInt(selectmonth.split("-")[0]);
            var month = parseInt(selectmonth.split("-")[1]);
            date.setMonth(month - 1);
            date.setFullYear(year);
            ShiftCalender('day');
        }
        if (filter == 2) {
            var selectmonth = document.getElementById("week-input").value;
            var year = parseInt(selectmonth.split("-")[0]);
            var month = parseInt(selectmonth.split("-")[1]);
            date.setMonth(month - 1);
            date.setFullYear(year);
            ShiftCalender('week');
        }
        if (filter == 3) {
            var selectmonth = document.getElementById("month-input").value;
            var year = parseInt(selectmonth.split("-")[0]);
            var month = parseInt(selectmonth.split("-")[1]);
            date.setMonth(month - 1);
            date.setFullYear(year);
            ShiftCalender('month');
        }
    }

    function nextCalendar() {
        switch (schedulingtype) {
            case 'month':
                date.setMonth(date.getMonth() + 1);
                ShiftCalender('month');
                break;

            case 'day':
                date.setDate(date.getDate() + 1);
                ShiftCalender('day');
                break;
            case 'week':
                sunday.setDate(sunday.getDate() + 7);
                saturday.setDate(saturday.getDate() + 7);
                ShiftCalender('week');
                break;
        }

    }

    function previousCalendar() {
        switch (schedulingtype) {
            case 'month':
                date.setMonth(date.getMonth() - 1);
                ShiftCalender('month');
                break;

            case 'day':
                date.setDate(date.getDate() - 1);
                ShiftCalender('day');
                break;
            case 'week':
                sunday.setDate(sunday.getDate() - 7);
                saturday.setDate(saturday.getDate() - 7);
                ShiftCalender('week');
                break;
        }

    }

    function OpenShiftModal(DataObject) {

        DataObject.datestring = date.toISOString();
        $.ajax({
            url: '/adminDashboard/OpenScheduledModal',
            type: 'Post',
            data: DataObject,
            success: function (data) {
                if (DataObject.actionType == "moreshifts") {
                    $('#ViewScheduledModal').modal('hide');
                    $('#schedulingModals').html(data);
                    $('#ViewAllShiftModal').modal('show');
                }
                if (DataObject.actionType == "moreweekshifts") {
                    $('#ViewScheduledModal').modal('hide');
                    $('#schedulingModals').html(data);
                    $('#ViewAllShiftModal').modal('show');
                }
                else {
                    $('#ViewAllShiftModal').modal('hide');
                    $('#schedulingModals').html(data);
                    $('#ViewScheduledModal').modal('show');
                }

            },
            error: function (e) {
                console.log(e);
            }
        });
    }

    function OpenShiftModalWeek(shiftdate, physicianid) {

        var datestring = date.toISOString();
        $.ajax({
            url: '/adminDashboard/OpenScheduledModalWeek',
            type: 'Post',
            data: { sundaystring: sunday.toISOString(), saturdaystring: saturday.toISOString(), datestring: datestring, shiftdate: shiftdate, physicianid: physicianid },
            success: function (data) {

                $('#ViewScheduledModal').modal('hide');
                $('#schedulingModals').html(data);
                $('#ViewAllShiftModal').modal('show');

            },
            error: function (e) {
                console.log(e);
            }
        });
    }



    function ReturnShift(status, shiftdetailid) {
        event.preventDefault();

        $.ajax({
            method: "POST",
            url: "/adminDashboard/ReturnShift",
            data: { status: status, shiftdetailid: shiftdetailid },

            success: function (res) {
                $('#ViewScheduledModal').modal('hide');
                switch (schedulingtype) {
                    case 'month':

                        ShiftCalender('month');
                        break;

                    case 'day':

                        ShiftCalender('day');
                        break;
                    case 'week':

                        ShiftCalender('week');
                        break;
                }

                toastr.success("Shift Return Successfully");

            },

            error: function () {
                toastr.error("Error");
            }
        });

    }

    function deleteShift(shiftdetailid) {
        event.preventDefault();

        $.ajax({
            method: "POST",
            url: "/adminDashboard/deleteShift",
            data: { shiftdetailid: shiftdetailid },

            success: function (res) {
                $('#ViewScheduledModal').modal('hide');
                switch (schedulingtype) {
                    case 'month':

                        ShiftCalender('month');
                        break;

                    case 'day':

                        ShiftCalender('day');
                        break;
                    case 'week':

                        ShiftCalender('week');
                        break;
                }

                toastr.success("Shift deleted Successfully");
            },

            error: function () {
                toastr.error("Error");
            }
        });
    }

    function EditShiftDetails() {
        event.preventDefault();
        var formdata = $('#EditshiftForm').serialize();
        if ($('#EditshiftForm').valid()) {
            $.ajax({
                method: "POST",
                url: "/adminDashboard/EditShiftDetails",
                data: formdata,

                success: function (res) {

                    if (res) {

                        $('#ViewScheduledModal').modal('hide');
                        switch (schedulingtype) {
                            case 'month':

                                ShiftCalender('month');
                                break;

                            case 'day':

                                ShiftCalender('day');
                                break;
                            case 'week':

                                ShiftCalender('week');
                                break;
                        }

                        toastr.success("Shift Edited Successfully");
                    }
                    else {
                        toastr.error("Phyasician is busy on your selected Time!!!");
                    }
                },

                error: function () {
                    toastr.error("Error");
                }
            });
        }
    }


    function CreateNewShift() {
        $.ajax({
            method: "GET",
            url: "/adminDashboard/CreateNewShift",
            success: function (res) {
                $("#schedulingModals").html(res);
                $("#createShiftModal").modal("show");
            },

            error: function () {
                toastr.error("Something is Wrong");
            },
        });
    }

    function GetOnCall(regionid) {
        $.ajax({
            method: "GET",
            url: "/adminDashboard/GetOnCall",
            data: { regionid: regionid },
            success: function (res) {
                $("#content").html(res);
                $("#MDsRegion").val(regionid);
            },

            error: function () {
                toastr.error("Error");
            },
        });
    }

    function ShiftReview(regionId, callId) {
        $.ajax({
            method: "GET",
            url: "/adminDashboard/ShiftReview",
            data: { regionId: regionId, callId: callId },

            success: function (result) {
                $("#content").html(result);
                $("#regionValue").val(regionId);
            },

            error: function () {
                toastr.error("Error");
            },
        });
    }


</script>
@section Scripts{
    @{
        <Partial name="_ValidationScriptsPartial" />
    }
 }