        <div id="table_tabview">

            <div class="table-responsive" id="tableParentDiv">
                <table class="table" id="tableDataMain">
                    <thead id="table-heading">
                        <tr>
                            <th scope="col" class="dark-mode2 ">Name</th>
                            <th scope="col" class="dark-mode2 ">Date of Birth</th>
                            <th scope="col" class="dark-mode2 ">Requestor</th>
                            <th scope="col" class="dark-mode2 ">Requested date</th>
                            <th scope="col" class="dark-mode2 ">Phone</th>
                            <th scope="col" class="dark-mode2 ">Address</th>
                            <th scope="col" class="dark-mode2 ">Notes</th>
                            <th scope="col" class="dark-mode2 ">Chat With</th>
                            <th scope="col" class="dark-mode2 ">Action</th>
                        </tr>
                    </thead>
                    <tbody id="tabledata">

                        @foreach (var item in Model.data)
                        {
                            
                                var bgColor = "He";
                                var role = "hello";

                                @if (item.request_type_id == 1)
                                {
                                    bgColor = "#60be5e";
                                    role = "Patient";
                                }
                                else if (item.request_type_id == 2)
                                {
                                    bgColor = "#e69232";
                                    role = "FamilyFriend";
                                }
                                else if (item.request_type_id == 3)
                                {
                                    bgColor = "#0b7ebf";
                                    role = "Concierge";
                                }
                                else if (item.request_type_id == 4)
                                {
                                    bgColor = "#d76879";
                                    role = "Business";
                                }

                                <tr class="tablerows @role">
                                    <td style="background:@bgColor">
                                        <div class="table_name_email ps-1">

                                            @item.first_name, @item.last_name
                                            <a href="">
                                            <i class="bi bi-envelope me-3 text-white rounded-5 border p-1 text-info"></i>
                                            </a>
                                        </div>
                                    </td>
                                    <td style="background:@bgColor">@item.fulldateofbirth</td>
                                    <td style="background:@bgColor">@item.requestor_fname , @item.responseor_lname</td>
                                    <td style="background:@bgColor">@item.created_date</td>
                                    <td style="background:@bgColor">
                                        <div class="table_phone">
                                            <a href="">
                                            <i class="bi bi-telephone text-white  rounded-5   p-1 text-info"></i>
                                                @item.mobile_num
                                            </a>
                                        </div>
                                        <div >
                                            (Patient)
                                        </div>
                                        @if (item.request_type_id != 1)
                                        {
                                            <div class="table_phone">
                                                <a href="">
                                                    <i class="bi bi-telephone   rounded-5   p-1 text-info" ></i>
                                                    @item.requestor_mobile_num
                                                </a>
                                            </div>
                                            <div >
                                                (@role)
                                            </div>
                                        }
                                    </td>
                                    <td style="background:@bgColor">@item.address</td>
                                    <td style="background:@bgColor">-</td>
                                    <td style="background:@bgColor; ">

                                        <div style="display:flex;">
                                            <div class="dropdown">
                                                <button class="btn text-white border border-white py-1 "
                                                        id="chat_with_dropdown2" type="button" data-bs-toggle="dropdown"
                                                        aria-expanded="false">
                                                    <i class="fa-solid fa-user-doctor me-2 d-none d-sm-inline"></i>
                                                    <span>
                                                        Provider
                                                    </span>
                                                </button>
                                            </div>
                                        </div>
                                    </td>
                                    <td style="background:@bgColor">
                                        <div>
                                            <div class="dropdown">
                                                <button class="btn text-white border border-white py-1 "
                                                        id="chat_with_dropdown2" type="button" data-bs-toggle="dropdown"
                                                        aria-expanded="false">
                                                    <span>
                                                        Action
