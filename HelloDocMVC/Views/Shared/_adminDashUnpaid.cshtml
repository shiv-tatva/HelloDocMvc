<div class="mt-2 mb-2 container-fluid" style="box-shadow: 0px 0px 5px grey;">

    <div class="container-fluid p-0">
        <div id="tablehead-container">

            <div id="tablehead-left">
                <div class="d-md-flex gap-1">
                    <form role="search" class="bg-light d-flex align-items-center border border-rounded rounded mb-2">
                        <!-- <i class="bi bi-search"></i> -->
                        <i type="search" class="fa-solid fa-magnifying-glass px-2" style="color:#adadad"></i>
                        <input class="form-control border-0" id="my-search-input" type="search" placeholder="Search" aria-label="Search">
                    </form>

                    <select class="form-select  mb-2" aria-label="Default select example">
                        <option selected="">All Region</option>
                        <option value="1">Gujarat</option>
                        <option value="2">Two</option>
                        <option value="3">Three</option>
                    </select>
                </div>

            </div>
            <span id="tablehead-right">
                <span class="table_head_five" id="all" type="button" onclick="allElements()" style="cursor:pointer">
                    All
                </span>
                <span class="table_head_five" onclick="patientElements()" style="cursor:pointer">

                    <span class="patient_circle"></span>
                    <span>
                        Patients
                    </span>
                </span>
                <span class="table_head_five" onclick="familyFriendElements()" style="cursor:pointer">

                    <span class="family_circle"></span>

                    <span>
                        Family/Friends
                    </span>
                </span>
                <span class="table_head_five" onclick="businessElements()" style="cursor:pointer">

