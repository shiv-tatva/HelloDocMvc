                    <span>
                        Bussiness
                    </span>
                </span>
                <span class="table_head_five" onclick="conciergeElements()" style="cursor:pointer">

                    <span class="Concierge_circle"></span>

                    <span>
                        Concierge
                    </span>
                </span>
                <span class="table_head_five" style="cursor:pointer">

                    <span class="vip_circle"></span>


                    <span>
                        VIP
                    </span>
                </span>
            </span>
        </div>
    </div>

    <div id="table_tabview">
        <div class="container-fluid d-none d-sm-block">
            <table class="table" id="tableDataMainUnpaid">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Physican Name</th>
                        <th scope="col">Date of Service</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Address</th>
                        <th scope="col">Chat with</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.data)
                    {
                        if (item.status == 9)
                        {
                            var bgColor = "He";
                            var role = "hello";

                            @if (item.request_type_id == 1)
                            {
                                bgColor = "#60be5e";
                                role = "Patient";
                            }
                            else if (item.request_type_id == 2)
                            {
                                bgColor = "#e69232";
                                role = "FamilyFriend";
                            }
                            else if (item.request_type_id == 3)
                            {
                                bgColor = "#0b7ebf";

                                role = "Concierge";
                            }
                            else if (item.request_type_id == 4)
                            {
                                bgColor = "#d76879";
                                role = "Business";
                            }


                            <tr class="tablerows @role">
                                <td class="text-white" style="background:@bgColor">
                                    <div class="table_name_email">

                                        @item.first_name, @item.last_name
                                        <a href="">
                                            <i class="bi bi-envelope me-3  rounded-5 border p-1 text-info" style="color:white!important"></i>
                                        </a>
                                    </div>
                                </td>
                                <td class="text-white" style="background:@bgColor">@item.phy_name</td>
                                <td class="text-white" style="background:@bgColor">Nov 20, 2023 335h 1m 01m</td>
                                <td class="text-white" style="background:@bgColor">
                                    <div class="table_phone">
                                        <a href="">
                                            <i class="bi bi-telephone   rounded-5   p-1 text-info" style="color:white!important"></i>
                                            @item.mobile_num
                                        </a>
                                    </div>
                                    <div style="color:white">
                                        (Patient)
                                    </div>
                                    @if (item.request_type_id != 1)
                                    {
                                        <div class="table_phone">
                                            <a href="">
                                                <i class="bi bi-telephone   rounded-5   p-1 text-info" style="color:white!important"></i>
                                                @item.requestor_mobile_num
                                            </a>
                                        </div>
                                        <div style="color:white">
                                            (@role)
                                        </div>
                                    }
                                </td>
                                <td class="text-white" style="background:@bgColor">Room Location:101</td>
                                <td class="text-white" style="background:@bgColor">

                                    <div style="display:flex;">
                                        <div class="dropdown mb-1">
                                            <button class="btn text-white border border-white py-1 "
                                                    id="chat_with_dropdown1" type="button" data-bs-toggle="dropdown"
                                                    aria-expanded="false">
                                                <i class="bi bi-person me-2 d-none d-sm-inline"></i>
                                                <span>
                                                    Patient
