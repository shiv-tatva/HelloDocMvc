
<style>
    #dashboardMain{
        color:black!important;
        border-bottom: none;
    }

    #profileMain{
        color: skyblue !important;
        border-bottom: 2px solid skyblue;
    }
</style>

@model DAL_Data_Access_Layer_.CustomeModel.PatientDashboardData

    <div class="container">
        <div class=" mt-2 d-flex justify-content-between align-items-center">
            <h4>User Profile</h4>
            <a asp-controller="patientDashboard" asp-action="patientDashboard"
               class="btn shadow  btn-outline-secondary border-info text-info px-3 ">
                <i class="fa-solid fa-angle-left"></i> Back
            </a>
        </div>
        <form method="post" class="shadow border rounded my-3">
            <div class="mx-3 my-4 ">
                <div class="mt-3">
                    <h4 class="my-4 pt-4">General Information</h4>

                    <div class="row">
                        <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3 ">
                            <input type="text" class="dclass form-control " id="floatingInputFirst" asp-for="fname"
                                   placeholder="First Name" aria-label="First Name" value="@Model.fname">
                            <label class="ms-2 " for="floatingInputFirst">First Name</label>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12  form-floating mb-3 ">
                            <input type="text" class="dclass form-control " id="floatingInputLast" asp-for="lname"
                                   placeholder="Last Name" aria-label="Last Name" value="@Model.lname">
                            <label class="ms-2  " for="floatingInputLast">Last Name</label>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12  form-floating">
                            <input type="date" class="dclass form-control " id="floatingInputdate"
                                   placeholder="Date Of Birth" aria-label="First Name" value="@Model.fulldateofbirth">
                            <label class="ms-2 " for="floatingInputdate">Date Of Birth</label>
                        </div>
                    </div>
                </div>

                <div class="pt-4">
                    <h4 class="mb-4">Contact Information</h4>
                    <div class="row mb-3">
                        <div class="col-xl-2 col-lg-2 col-md-2 col-sm-3 form-floating mb-3">
                            <select class="dclass form-select" id="floatingSelectGrid" aria-label="Floating label select example">
                                <option selected>Mobile</option>
                                <option value="1">Phone</option>

                            </select>
                            <label class="ms-2" for="floatingSelectGrid">Type</label>

                        </div>
                        <div class=" col-xl-4 col-lg-4 col-md-4 col-sm-9 form-floating mb-3">
                            <input type="tel" class="dclass phone form-control " id="floatingInputcontact" asp-for="phone_no"
                                   placeholder="99XXXXXXXX" aria-label="Contact Number" style="height: 3.7em;" value="@Model.phone_no">

                        </div>
                        <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                            <input type="email" class="dclass form-control " id="floatingInputemail" asp-for="email"
                                   placeholder="Email" aria-label="Email" value="@Model.email">
                            <label class="ms-2 " for="floatingInputemail">Email</label>
                        </div>

                    </div>
                </div>

                <div class="pt-4">
                    <h4 class="mb-4">Location Information</h4>
                    <div class="row mb-3">
                        <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                            <input type="text" class="dclass form-control " id="floatingInputStreet" asp-for="street"
                                   placeholder="Street" aria-label="Street" value="@Model.street">
                            <label class="ms-2 " for="floatingInputStreet">Street</label>
                        </div>
                        <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                            <input type="text" class="dclass form-control " id="floatingInputCity" placeholder="City" asp-for="city"
                                   aria-label="City" value="@Model.city">
                            <label class="ms-2  " for="floatingInputCity">City</label>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                            <input type="text" class="dclass form-control " id="floatingInputState" placeholder="State" asp-for="state"
                                   aria-label="State" value="@Model.state">
                            <label class="ms-2 " for="floatingInputState">State</label>
                        </div>
                        <div class=" col-xl-4 col-lg-4 col-md-4 col-sm-9 form-floating mb-3">
                            <input type="text" class="dclass form-control " id="floatingInputZipCode" asp-for="zipcode"
                                   placeholder="Zip Code" aria-label="Zip Code" value="@Model.zipcode">
                            <label class="ms-2  " for="floatingInputZipCode">Zip Code</label>
                        </div>
                        <div class=" col-xl-2 col-lg-2 col-md-2 col-sm-3 form-floating mb-3">
                            <button onclick="myProfileMap()" type="button" class="dclass btn btn-outline-dark border-info p-3 text-info w-100">
                                <i class="bi bi-geo-alt-fill "></i>
                                <span>Map</span>
                            </button>
                        </div>
                    </div>

                </div>


                <div class="d-grid gap-2 d-flex justify-content-center  justify-content-md-end mt-4 pt-4 mb-3">
                    <button type="button" id="editBtn" class="btn btn-info text-white EditBtn" onclick="enableFields()">Edit </button>

                    <button type="submit" id="submitBtn" class="btn btn-info text-white EditBtn">Submit </button>

                    <button type="button" id="cancelBtn" class="btn btn-outline-info EditBtn" onclick="disableFields()">Cancel</button>
                </div>
            </div>
        </form>
    </div>




<link rel="stylesheet" href="/css/profileMain.css">

<script>
    function disableFields() {
        document.querySelectorAll('.dclass').forEach(function (element) {
            element.disabled = true;
        });
        // Hide the submit and cancel buttons, show the edit button
        document.getElementById('submitBtn').style.display = 'none';
        document.getElementById('cancelBtn').style.display = 'none';
        document.getElementById('editBtn').style.display = 'block';
    }

        //date validation
        const currentDate = new Date().toISOString().split('T')[0];

    document.getElementById('floatingInputdate').setAttribute('max', currentDate);

    function enableFields() {
        document.querySelectorAll('.dclass').forEach(function (element) {
            element.disabled = false;
            document.getElementById("floatingInputemail").disabled = true;
        });
        // Show the submit and cancel buttons, hide the edit button
        document.getElementById('submitBtn').style.display = 'block';
        document.getElementById('cancelBtn').style.display = 'block';
        document.getElementById('editBtn').style.display = 'none';
    }
    disableFields();

    const phoneInputPatient = document.querySelector("#floatingInputcontact");
    const phoneInputP = window.intlTelInput(phoneInputPatient, {
        utilsScript:
            "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
    });


    function myProfileMap() {
        var street = $("#floatingInputStreet").val();
        var city = $("#floatingInputCity").val();
        var state = $("#floatingInputState").val();
        var zipcode = $("#floatingInputZipcode").val();

        window.location.href = "https://www.google.com/maps/search/?api=1&query=" + street + city + state + zipcode;
    }
</script>


