@{
    ViewData["Title"] = "Business Information";
}

<div class="row p-0 m-0">
    <div class="col-12">
        <div class="col-sm-11 col-md-8 col-lg-8" style="margin: auto;">
            <div id="backDiv" class="mb-5" style="text-align: end;">
                <a href="patientSubmitRequestScreen.html" title="Forgot password" class="link-default ps-3"
                   style="color: #09d4e3;text-decoration: none;font-weight: 600!important;border: 1px solid #09d4e3;border-radius: 8px;padding: 7px;">
                    <i class="fa-solid fa-chevron-left me-2" style="color: #09d4e3;"></i>Back
                </a>
            </div>
            <h4 class="h4Head">Business Information</h4>

            <div class="row ">
                <div class="mt-3 col-sm-6 col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Name">
                        <label>Your First Name</label>
                    </div>
                </div>
                <div class="mt-3 col-sm-6 col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Name">
                        <label>Your Last Name</label>
                    </div>
                </div>
                <div class="mt-3 col-sm-6 col-md-6">
                    <div class="select-box" style="width: 100%;">
                        <div class="selected-option" style="border: 1px solid #dee2e6;">
                            <div>
                                <span class="iconify" data-icon="flag:gb-4x3"></span>
                                <!-- <strong>+44</strong> -->
                            </div>
                            <input type="tel" name="tel" placeholder="(201) 555-0123"
                                   style="padding: 0.8rem 0.6rem;">
                        </div>
                        <div class="options">
                            <input type="text" class="search-box" placeholder="Search Country Name" style="background-color: white;position: relative;z-index: 3;">
                            <ol>
                            </ol>
                        </div>
                    </div>
                </div>
                <div class=" mt-3 col-sm-6 col-md-6 col-lg-6">
                    <div class="form-floating">
                        <input type="email" class="form-control" placeholder="Name">
                        <label>Your Email</label>
                    </div>
                </div>
                <div class="mt-3 col-sm-6 col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Name">
                        <label>Business/Property Name</label>
                    </div>
                </div>
                <div class="mt-3 col-sm-6 col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Name">
                        <label>Case Number (Optional)</label>
                    </div>
                </div>
            </div>

            <h4 class="mt-5 h4Head">Patient Information</h4>
            <div class="row">
                <div class="form-floating mt-3 col-12" style="overflow: hidden;">
                    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea"
                              style="height: 130px;"></textarea>
                    <label for="floatingTextarea" class="ms-2">Enter Brief Details Of Symptoms(Optional)</label>
                </div>
                <div class="mt-3 col-sm-6 col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Name">
                        <label>First Name</label>
                    </div>
                </div>
                <div class="mt-3 col-sm-6 col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Name">
                        <label>Last Name</label>
                    </div>
                </div>
                <div class="mt-3 col-sm-6 col-md-6">
                    <div class="form-floating">
                        <input type="date" class="form-control" placeholder="Name">
                        <label>Date of Birth</label>
                    </div>
                </div>
            </div>

            <h4 class="mt-5 h4Head">Patient Contact Information</h4>

            <div class="row ">
                <div class=" mt-3 col-sm-6 col-md-6 col-lg-6">
                    <div class="form-floating">
                        <input type="email" class="form-control" placeholder="Name">
                        <label>Email</label>
                    </div>
                </div>
                <div class="mt-3 col-sm-6 col-md-6">
                    <div class="select-box" style="width: 100%;">
                        <div class="selected-option" style="border: 1px solid #dee2e6;">
                            <div>
                                <span class="iconify" data-icon="flag:gb-4x3"></span>
                                <!-- <strong>+44</strong> -->
                            </div>
                            <input type="tel" name="tel" placeholder="(201) 555-0123"
                                   style="padding: 0.8rem 0.6rem;">
                        </div>
                        <div class="options">
                            <input type="text" class="search-box" placeholder="Search Country Name" style="background-color: white;position: relative;z-index: 3;">
                            <ol>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <h4 class="mt-5 h4Head">Patient Location</h4>

            <div class="row ">
                <div class="mt-3 col-sm-6 col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Name">
                        <label>Street</label>
                    </div>
                </div>
                <div class="mt-3 col-sm-6 col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Name">
                        <label>City</label>
                    </div>
                </div>
                <div class="mt-3 col-sm-6 col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Name">
                        <label>State</label>
                    </div>
                </div>
                <div class="mt-3 col-sm-6 col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Name">
                        <label>Zip code</label>
                    </div>
                </div>
                <div class="mt-3 col-sm-6 col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" placeholder="Name" pattern="[0-9]{6}"
                               title="Five digit zip code" />
                        <label>Room # / suite (Optional)</label>
                    </div>
                </div>
            </div>

            <div class="mt-5 d-flex justify-content-end">
                <div id="backDivTwo" class="me-2">
                    <a href="#" title="Forgot password" class="link-default ps-3"
                       style="color: #09d4e3;text-decoration: none;font-weight: 600!important;border: 1px solid #09d4e3;border-radius: 8px;padding: 7px;">Submit</a>
                </div>
                <div id="backDivThree">
                    <a href="#" title="Forgot password" class="link-default ps-3"
                       style="color: #09d4e3;text-decoration: none;font-weight: 600!important;border: 1px solid #09d4e3;border-radius: 8px;padding: 7px;"></i>Cancel</a>
                </div>
            </div>
        </div>


    </div>
</div>



<link rel="stylesheet" href="/css/BusinessInfo.css">