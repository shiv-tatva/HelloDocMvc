<div class="container">

    <div class=" mt-4 d-flex justify-content-between align-items-center">
        <h4>Submit Information</h4>
        <a asp-controller="adminDashboard" asp-action="adminDashboard"
           class="btn shadow  btn-outline-secondary border-info text-info px-3 ">
            <i class="fa-solid fa-angle-left"></i> Back
        </a>
    </div>

    <form class="shadow border rounded my-3" id="CreateRequestForm" method="post">
        <div class="mx-3 my-4 ">
            <h5 class="mb-3 mt-2">Patient</h5>

            <div class="row mb-3">
                <div class="col-12 col-md-6 form-floating mb-3">
                    <input type="text" class="form-control bg-transparent" id="floatingInputFName"
                           placeholder="Firstname">
                    <label for="floatingInputFName" class="ms-2">First Name</label>

                </div>
                <div class="col-12 col-md-6 form-floating mb-3">
                    <input type="text" class="form-control bg-transparent" id="floatingInputLName"
                           placeholder="LastName">
                    <label for="floatingInputLName" class="ms-2">Last Name</label>


                </div>
                <div class="col-12 col-md-6 form-floating mb-3">
                    <input type="tel" class="form-control bg-transparent" id="floatingInputPhone" placeholder="number">
                    <label for="floatingInputPhone" class="ms-2">Phone Number</label>


                </div>
                <div class="col-12 col-md-6 form-floating mb-3">
                    <input type="email" class="form-control bg-transparent" id="floatingInputEmail"
                           placeholder="name@example.com">
                    <label for="floatingInputEmail" class="ms-2">Email</label>


                </div>
                <div class="col-12 col-md-6 form-floating mb-3">
                    <input type="date" class="form-control bg-transparent" id="datePickerId" placeholder="DateOfBirth">
                    <label for="datePickerId" class="ms-2">Date Of Birth</label>


                </div>
            </div>

            <h5 class="mb-3 mt-3">Patient Location</h5>
            <div class="row mb-3">
                <div class="col-12 col-md-6 form-floating mb-3">
                    <input type="text" class="form-control bg-transparent" id="floatingInputStreet"
                           placeholder="street">
                    <label for="floatingInputStreet" class="ms-2">Street</label>

                </div>
                <div class="col-12 col-md-6 form-floating mb-3">
                    <input type="text" class="form-control bg-transparent" id="floatingInputCity" placeholder="city">
                    <label for="floatingInputCity" class="ms-2">City</label>


                </div>
                <div class="col-12 col-md-6 form-floating mb-3">
                    <input type="text" class="form-control bg-transparent" id="floatingInputState" placeholder="state">
                    <label for="floatingInputState" class="ms-2">State</label>


                </div>
                <div class="col-12 col-md-6 form-floating mb-3">
                    <input type="text" class="form-control bg-transparent" id="floatingInputZipcode"
                           placeholder="zipcode">
                    <label for="floatingInputZipcode" class="ms-2">Zip Code (Optional)</label>


                </div>
                <div class="col-12 col-md-6 form-floating mb-3">
                    <input type="text" class="form-control bg-transparent" id="floatingInputRoom" placeholder="room">
                    <label for="floatingInputRoom" class="ms-2">Room # (Optional)</label>
                </div>
                <div class="col form-floating mb-3">
                    <a class="btn btn-outline border-info p-3 text-info me-2">
                        <span>Verify</span>
                    </a>
                    <a class="btn btn-outline border-info p-3 text-info">
                        <i class="fa-solid fa-location-dot"></i>
                        <span>Map</span>
                    </a>
                </div>

            </div>
            <h5 class="mb-3 mt-2">Notes</h5>
            <div class="form-floating mb-3">
                <textarea class="form-control bg-transparent border border-2 h-100" rows="5"
                          placeholder="Leave a comment here" id="floatingTextareaNotes"></textarea>
                <label for="floatingTextareaNotes" class="text-wrap">Additional Notes(Optional)</label>
            </div>
            <div class="d-flex gap-2 justify-content-end mb-3">
                <input class="btn btn-info text-white" type="submit" value="Submit">
                <button type="reset" class="btn btn-outline-info">Cancel</button>
            </div>
        </div>
    </form>

</div>