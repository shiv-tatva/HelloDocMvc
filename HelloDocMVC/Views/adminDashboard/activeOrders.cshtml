<div class="container">
    <div class=" mt-4 d-flex justify-content-between align-items-center">
        <h4>Send Orders</h4>
        <a asp-controller="Admin" asp-action="Admin_Dashboard" class="btn shadow  btn-outline-secondary border-info text-info px-3 ">
            <i class="fa-solid fa-angle-left"></i> Back
        </a>
    </div>
    <form action="" class="shadow border rounded my-3" method="post">
        <div class="mx-3 my-4 ">
            <div class="mt-3">

                <div class="row">
                    <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 mb-3 ">
                        <select class="form-select text-secondary" id="inputGroupSelect01" style="height: 58px;">
                            <option selected="" disabled>Select Profession</option>
                            <option value="1">Profession 1</option>
                            <option value="2">Profession 2</option>
                            <option value="3">Profession 3</option>
                        </select>
                    </div>
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12  mb-3 ">
                        <select class="form-select text-secondary" id="inputGroupSelect02" style="height: 58px;">
                            <option selected="" disabled>Select Business</option>
                            <option value="1">Business 1</option>
                            <option value="2">Business 2</option>
                            <option value="3">Business 3</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12  form-floating">
                        <input type="text" class=" form-control " id="floatingInputBusinessContact"
                               placeholder="BusinessContact" aria-label="BusinessContact">
                        <label class="ms-2 text-secondary" for="floatingInputBusinessContact">Business Contact</label>
                    </div>
                    <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3">
                        <input type="email" class=" form-control" id="floatingInputemail" placeholder="Email"
                               aria-label="Email">
                        <label class="ms-2 text-secondary " for="floatingInputemail">Email</label>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12  form-floating">
                        <input type="text" class=" form-control " id="floatingInputFaxNumber"
                               placeholder="Faxnumber" aria-label="Faxnumber">
                        <label class="ms-2 text-secondary" for="floatingInputFaxNumber">Fax Number</label>
                    </div>
                </div>
                <div class="row">
                    <div class=" col-12 form-floating mb-3 ">
                        <textarea class="form-control h-100 " id="floatingInput" placeholder="Textarea"
                                  rows="3"></textarea>
                        <label for="floatingInput" class="text-wrap ms-2 text-secondary">Prescription or Order Details</label>
                    </div>
                </div>
                <div class=" col-xl-6 col-lg-6 col-md-6 col-sm-12 form-floating mb-3 ">
                    <select class="form-select" id="inputGroupSelect02" style="width: 619px;">
                        <option selected="">Not Required</option>
                        <option value="1">Profession 1</option>
                        <option value="2">Profession 2</option>
                        <option value="3">Profession 3</option>
                    </select>
                    <label for="inputGroupSelect02" class="text-wrap small text-secondary">Number Of Refills</label>
                </div>
            </div>


            <div class="d-grid gap-2 d-flex justify-content-center  justify-content-md-end mt-4 pt-4 mb-3">

                <button type="submit" id="submitBtn" class="btn btn-info text-white EditBtn">Submit</button>

                <button type="button" id="cancelBtn" class="btn btn-outline-info EditBtn">Cancel</button>
            </div>
        </div>
    </form>
</div>